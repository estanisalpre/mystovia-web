---
import Layout from '@layouts/Layout.astro';
import { ChevronLeft, Clock, Flame, Snowflake, Zap, Sword } from '@lucide/astro';
import DiamondPattern from "@c/ui/DiamondPattern.astro";
import GoldenLine from "@c/ui/GoldenLine.astro";
import CornerOrnaments from "@c/ui/CornerOrnaments.astro";
---

<Layout
  title="Spells Cooldowns - Guías del Bot"
  description="Lista completa de cooldowns de spells en Mystovia. Tiempos de recarga para Sorcerer, Druid, Paladin y Knight."
  keywords="cooldowns mystovia, spells cooldown tibia, tiempo recarga spells, cd spells ots"
>
  <section class="page-container max-w-4xl mx-auto">
    <!-- Back Button -->
    <a href="/guides" class="inline-flex items-center gap-2 text-gray-400 hover:text-yellow-500 transition-colors mb-6">
      <ChevronLeft class="w-4 h-4" />
      <span>Volver a guías</span>
    </a>

    <!-- Header -->
    <div class="relative rounded-xl overflow-hidden p-6 md:p-8 mb-8 border border-yellow-600/30"
         style="background: linear-gradient(to bottom, rgb(17 24 39 / 0.95), rgb(0 0 0 / 0.9));">
      <DiamondPattern opacity={0.03} />
      <GoldenLine position="top" opacity={0.5} />
      <CornerOrnaments variant="curve" size="md" opacity={0.3} />

      <div class="relative z-10">
        <div class="flex items-center gap-2 mb-3">
          <span class="text-xs bg-blue-500/20 text-blue-400 px-2 py-1 rounded border border-blue-500/30">
            Referencia
          </span>
        </div>
        <h1 class="text-2xl md:text-3xl lg:text-4xl font-bold text-yellow-500 medieval-font mb-3">
          Spells Cooldowns
        </h1>
        <p class="text-gray-400">
          Lista completa de cooldowns de spells en Mystovia por vocación.
        </p>
      </div>
    </div>

    <!-- Content -->
    <div class="space-y-8">
      <!-- Sorcerer / Master Sorcerer -->
      <article class="vocation-section">
        <div class="vocation-header vocation-sorcerer">
          <Flame class="w-6 h-6" />
          <h2 class="text-xl md:text-2xl font-bold medieval-font">Sorcerer / Master Sorcerer</h2>
        </div>
        <div class="vocation-content">
          <!-- CD 4 segundos -->
          <div class="cooldown-group">
            <div class="cooldown-badge">
              <Clock class="w-4 h-4" />
              <span>CD: 4 segundos</span>
            </div>
            <ul class="spell-list">
              <li>
                <span class="spell-name">Energy Wave</span>
                <code class="spell-words">(exevo vis hur)</code>
                <span class="spell-info">- Lvl: 38, Mana: 170</span>
              </li>
            </ul>
          </div>

          <!-- CD 15 segundos -->
          <div class="cooldown-group">
            <div class="cooldown-badge cooldown-high">
              <Clock class="w-4 h-4" />
              <span>CD: 15 segundos</span>
            </div>
            <ul class="spell-list">
              <li>
                <span class="spell-name">Rage of the Skies</span>
                <code class="spell-words">(exevo gran mas vis)</code>
                <span class="spell-info">- Lvl: 55, Mana: 650</span>
              </li>
              <li>
                <span class="spell-name">Hells Core</span>
                <code class="spell-words">(exevo gran mas flam)</code>
                <span class="spell-info">- Lvl: 60, Mana: 1200</span>
              </li>
              <li>
                <span class="spell-name">Ultimate Energy Strike</span>
                <code class="spell-words">(exori max vis)</code>
                <span class="spell-info">- Lvl: 90, Mana: 100</span>
              </li>
              <li>
                <span class="spell-name">Ultimate Flame Strike</span>
                <code class="spell-words">(exori max flam)</code>
                <span class="spell-info">- Lvl: 90, Mana: 100</span>
              </li>
            </ul>
          </div>
        </div>
      </article>

      <!-- Druid / Elder Druid -->
      <article class="vocation-section">
        <div class="vocation-header vocation-druid">
          <Snowflake class="w-6 h-6" />
          <h2 class="text-xl md:text-2xl font-bold medieval-font">Druid / Elder Druid</h2>
        </div>
        <div class="vocation-content">
          <!-- CD 4 segundos -->
          <div class="cooldown-group">
            <div class="cooldown-badge">
              <Clock class="w-4 h-4" />
              <span>CD: 4 segundos</span>
            </div>
            <ul class="spell-list">
              <li>
                <span class="spell-name">Terra Wave</span>
                <code class="spell-words">(exevo tera hur)</code>
                <span class="spell-info">- Lvl: 38, Mana: 210</span>
              </li>
            </ul>
          </div>

          <!-- CD 15 segundos -->
          <div class="cooldown-group">
            <div class="cooldown-badge cooldown-high">
              <Clock class="w-4 h-4" />
              <span>CD: 15 segundos</span>
            </div>
            <ul class="spell-list">
              <li>
                <span class="spell-name">Eternal Winter</span>
                <code class="spell-words">(exevo gran mas frigo)</code>
                <span class="spell-info">- Lvl: 60, Mana: 1200</span>
              </li>
              <li>
                <span class="spell-name">Wrath of Nature</span>
                <code class="spell-words">(exevo gran mas tera)</code>
                <span class="spell-info">- Lvl: 55, Mana: 770</span>
              </li>
              <li>
                <span class="spell-name">Ultimate Terra Strike</span>
                <code class="spell-words">(exori max tera)</code>
                <span class="spell-info">- Lvl: 90, Mana: 100</span>
              </li>
              <li>
                <span class="spell-name">Ultimate Ice Strike</span>
                <code class="spell-words">(exori max frigo)</code>
                <span class="spell-info">- Lvl: 90, Mana: 100</span>
              </li>
            </ul>
          </div>
        </div>
      </article>

      <!-- Paladin / Royal Paladin -->
      <article class="vocation-section">
        <div class="vocation-header vocation-paladin">
          <Zap class="w-6 h-6" />
          <h2 class="text-xl md:text-2xl font-bold medieval-font">Paladin / Royal Paladin</h2>
        </div>
        <div class="vocation-content">
          <!-- CD 3 segundos -->
          <div class="cooldown-group">
            <div class="cooldown-badge cooldown-low">
              <Clock class="w-4 h-4" />
              <span>CD: 3 segundos</span>
            </div>
            <ul class="spell-list">
              <li>
                <span class="spell-name">Divine Caldera</span>
                <code class="spell-words">(exevo mas san)</code>
                <span class="spell-info">- Lvl: 50, Mana: 160</span>
              </li>
            </ul>
          </div>

          <!-- CD 15 segundos -->
          <div class="cooldown-group">
            <div class="cooldown-badge cooldown-high">
              <Clock class="w-4 h-4" />
              <span>CD: 15 segundos</span>
            </div>
            <ul class="spell-list">
              <li>
                <span class="spell-name">Strong Ethereal Spear</span>
                <code class="spell-words">(exori gran con)</code>
                <span class="spell-info">- Lvl: 90, Mana: 55</span>
              </li>
            </ul>
          </div>
        </div>
      </article>

      <!-- Knight / Elite Knight -->
      <article class="vocation-section">
        <div class="vocation-header vocation-knight">
          <Sword class="w-6 h-6" />
          <h2 class="text-xl md:text-2xl font-bold medieval-font">Knight / Elite Knight</h2>
        </div>
        <div class="vocation-content">
          <!-- CD 4 segundos -->
          <div class="cooldown-group">
            <div class="cooldown-badge">
              <Clock class="w-4 h-4" />
              <span>CD: 4 segundos</span>
            </div>
            <ul class="spell-list">
              <li>
                <span class="spell-name">Whirlwind Throw</span>
                <code class="spell-words">(exori hur)</code>
                <span class="spell-info">- Lvl: 15, Mana: 40</span>
              </li>
              <li>
                <span class="spell-name">Brutal Strike</span>
                <code class="spell-words">(exori ico)</code>
                <span class="spell-info">- Lvl: 16, Mana: 30</span>
              </li>
              <li>
                <span class="spell-name">Berserk</span>
                <code class="spell-words">(exori)</code>
                <span class="spell-info">- Lvl: 35, Mana: 115</span>
              </li>
            </ul>
          </div>

          <!-- CD 5 segundos -->
          <div class="cooldown-group">
            <div class="cooldown-badge">
              <Clock class="w-4 h-4" />
              <span>CD: 5 segundos</span>
            </div>
            <ul class="spell-list">
              <li>
                <span class="spell-name">Fierce Berserk</span>
                <code class="spell-words">(exori gran)</code>
                <span class="spell-info">- Lvl: 70, Mana: 340</span>
              </li>
            </ul>
          </div>

          <!-- CD 6 segundos -->
          <div class="cooldown-group">
            <div class="cooldown-badge">
              <Clock class="w-4 h-4" />
              <span>CD: 6 segundos</span>
            </div>
            <ul class="spell-list">
              <li>
                <span class="spell-name">Groundshaker</span>
                <code class="spell-words">(exori mas)</code>
                <span class="spell-info">- Lvl: 33, Mana: 160</span>
              </li>
            </ul>
          </div>

          <!-- CD 15 segundos -->
          <div class="cooldown-group">
            <div class="cooldown-badge cooldown-high">
              <Clock class="w-4 h-4" />
              <span>CD: 15 segundos</span>
            </div>
            <ul class="spell-list">
              <li>
                <span class="spell-name">Annihilation</span>
                <code class="spell-words">(exori gran ico)</code>
                <span class="spell-info">- Lvl: 110, Mana: 300</span>
              </li>
            </ul>
          </div>
        </div>
      </article>

      <!-- Default Cooldown Note -->
      <div class="default-note">
        <Clock class="w-5 h-5 text-gray-400" />
        <p class="text-gray-300">
          El resto de los spells tienen <strong class="text-yellow-500">2s</strong> de cooldown
        </p>
      </div>
    </div>

    <!-- Back to guides -->
    <div class="mt-12 pt-8 border-t border-gray-800">
      <a href="/guides" class="inline-flex items-center gap-2 text-yellow-500 hover:text-yellow-400 transition-colors">
        <ChevronLeft class="w-4 h-4" />
        <span>Volver a todas las guías</span>
      </a>
    </div>
  </section>
</Layout>

<style>
  .vocation-section {
    position: relative;
    border-radius: 0.75rem;
    overflow: hidden;
    border: 1px solid rgb(31 41 55);
    background: linear-gradient(to bottom, rgb(31 41 55 / 0.3), rgb(17 24 39 / 0.5));
  }

  .vocation-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1.5rem;
    border-bottom: 1px solid rgb(55 65 81 / 0.5);
  }

  .vocation-sorcerer {
    background: linear-gradient(to right, rgb(239 68 68 / 0.15), transparent);
    color: rgb(252 165 165);
  }

  .vocation-druid {
    background: linear-gradient(to right, rgb(59 130 246 / 0.15), transparent);
    color: rgb(147 197 253);
  }

  .vocation-paladin {
    background: linear-gradient(to right, rgb(234 179 8 / 0.15), transparent);
    color: rgb(253 224 71);
  }

  .vocation-knight {
    background: linear-gradient(to right, rgb(34 197 94 / 0.15), transparent);
    color: rgb(134 239 172);
  }

  .vocation-content {
    padding: 1.5rem;
  }

  .cooldown-group {
    margin-bottom: 1.5rem;
  }

  .cooldown-group:last-child {
    margin-bottom: 0;
  }

  .cooldown-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.375rem 0.75rem;
    border-radius: 0.5rem;
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    background-color: rgb(75 85 99 / 0.5);
    color: rgb(209 213 219);
    border: 1px solid rgb(75 85 99);
  }

  .cooldown-low {
    background-color: rgb(34 197 94 / 0.2);
    color: rgb(134 239 172);
    border-color: rgb(34 197 94 / 0.3);
  }

  .cooldown-high {
    background-color: rgb(239 68 68 / 0.2);
    color: rgb(252 165 165);
    border-color: rgb(239 68 68 / 0.3);
  }

  .spell-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .spell-list li {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0;
    border-bottom: 1px solid rgb(55 65 81 / 0.3);
  }

  .spell-list li:last-child {
    border-bottom: none;
  }

  .spell-name {
    color: white;
    font-weight: 600;
  }

  .spell-words {
    background-color: rgb(31 41 55);
    padding: 0.125rem 0.5rem;
    border-radius: 0.25rem;
    color: rgb(250 204 21);
    font-family: monospace;
    font-size: 0.875rem;
  }

  .spell-info {
    color: rgb(156 163 175);
    font-size: 0.875rem;
  }

  .default-note {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1.5rem;
    border-radius: 0.75rem;
    background: linear-gradient(to bottom, rgb(31 41 55 / 0.5), rgb(17 24 39 / 0.7));
    border: 1px solid rgb(55 65 81);
  }

  @media (max-width: 640px) {
    .spell-list li {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.25rem;
    }
  }
</style>
