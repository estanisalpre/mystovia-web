            <div class="px-4 py-3 border-b border-blue-600/20 bg-blue-500/5">
              <h3 class="text-base font-bold text-blue-400 flex items-center gap-2">
                <Shield class="w-4 h-4" />
                Vice Leaders ({viceLeaders.length})
              </h3>
            </div>

            {viceLeaders.length > 0 ? (
              <div class="divide-y divide-blue-600/10">
                {viceLeaders.map((member: any) => (
