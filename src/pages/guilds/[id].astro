---
export const prerender = false;

import Layout from "@layouts/Layout.astro";
import { Shield, Users, Crown, ChevronRight, Home, UserPlus, LogOut, Mail, Camera, X, UserMinus, ChevronUp, ChevronDown, Trash2 } from '@lucide/astro';

const { id } = Astro.params;

// Use internal URL for SSR to avoid timeout on Render
const INTERNAL_API_URL = `http://localhost:${process.env.PORT || 3000}`;

// Get user from cookies
const userId = Astro.cookies.get('userId')?.value;
let user = null;
let userCharacters: any[] = [];

if (userId) {
  try {
    const verifyResponse = await fetch(`${INTERNAL_API_URL}/api/auth/verify`, {
      method: 'GET',
      headers: { 'Cookie': `userId=${userId}` }
    });
    if (verifyResponse.ok) {
      const data = await verifyResponse.json();
      if (data.success && data.user) {
        user = data.user;
      }
    }

    // Get user's characters
    const charsResponse = await fetch(`${INTERNAL_API_URL}/api/characters`, {
      headers: { 'Cookie': `userId=${userId}` }
    });
    if (charsResponse.ok) {
      const charsData = await charsResponse.json();
      userCharacters = charsData.characters || [];
    }
  } catch (error) {
    console.error('Error verifying user:', error);
  }
}

// Fetch guild
let guildData: any = null;
let error = null;

try {
  const response = await fetch(`${INTERNAL_API_URL}/api/guilds/${id}`);
  const data = await response.json();

  if (data.success) {
    guildData = data.guild;
  } else {
    error = data.error || 'Guild no encontrada';
  }
} catch (e) {
  error = 'Error al cargar la guild';
}

// Check user's relationship to guild
const isOwner = user && guildData && userCharacters.some((c: any) => c.id === guildData.ownerid);
const userMemberChar = user && guildData ? guildData.members?.find((m: any) =>
  userCharacters.some((c: any) => c.id === m.id)
) : null;
const isMember = !!userMemberChar;
const isLeaderOrVice = userMemberChar && (userMemberChar.rank_level === 1 || userMemberChar.rank_level === 2);

// Check if any of user's characters has a pending invite to this guild
const invitedChar = user && guildData ? guildData.invites?.find((inv: any) =>
  userCharacters.some((c: any) => c.id === inv.player_id)
) : null;
const hasInvite = !!invitedChar;

// Separate members by rank
const leaders = guildData?.members?.filter((m: any) => m.rank_level === 1) || [];
const viceLeaders = guildData?.members?.filter((m: any) => m.rank_level === 2) || [];
const members = guildData?.members?.filter((m: any) => m.rank_level === 3) || [];

function getVocationName(vocationId: number): string {
  const vocations: Record<number, string> = {
    0: 'None', 1: 'Sorcerer', 2: 'Druid', 3: 'Paladin', 4: 'Knight',
    5: 'Master Sorcerer', 6: 'Elder Druid', 7: 'Royal Paladin', 8: 'Elite Knight'
  };
  return vocations[vocationId] || 'Unknown';
}

function formatDate(timestamp: number): string {
  const date = new Date(timestamp * 1000);
  return date.toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' });
}
