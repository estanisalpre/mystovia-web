                  <div class="flex items-center gap-3 px-4 py-3 hover:bg-gray-500/5 transition-colors group">
                    <a href={`/character-information?name=${encodeURIComponent(member.name)}`} class="flex items-center gap-3 flex-1 min-w-0">
                      <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-gray-700 to-gray-800 border border-gray-600/50 flex items-center justify-center">
                        <span class="text-sm font-bold text-gray-400">{member.name[0].toUpperCase()}</span>
                      </div>
                      <div class="flex-1 min-w-0">
                        <div class="flex items-center gap-2">
                          <span class="text-white font-semibold group-hover:text-gray-300 transition-colors">{member.name}</span>
                        </div>
                        <div class="text-gray-500 text-xs">
                          {getVocationName(member.vocation)} · Level {member.level}
                        </div>
                      </div>
                    </a>
                    {isLeaderOrVice && (
                      <div class="flex items-center gap-1 opacity-0 group-hover:opacity-100 transition-opacity">
                        {isOwner && (
                          <button class="change-rank-btn p-2 text-blue-400 hover:text-blue-300 hover:bg-blue-500/10 rounded transition-colors"
                                  data-player-id={member.id}
                                  data-new-rank="2"
                                  title="Promover a Vice Leader">
                            <ChevronUp class="w-4 h-4" />
                          </button>
                        )}
                        <button class="kick-member-btn p-2 text-red-400 hover:text-red-300 hover:bg-red-500/10 rounded transition-colors"
                                data-player-id={member.id}
                                data-player-name={member.name}
                                title="Expulsar">
                          <UserMinus class="w-4 h-4" />
                        </button>
                      </div>
                    )}
                  </div>
                ))}
              </div>
            ) : (
              <div class="py-6 text-center text-gray-500 text-sm">
                No hay members en esta guild
              </div>
            )}
          </div>
        </div>

        <!-- Pending Invites (visible to leaders/vice leaders) -->
        {isLeaderOrVice && guildData.invites && guildData.invites.length > 0 && (
          <div class="relative rounded-xl overflow-hidden mt-6"
               style="background: linear-gradient(to bottom, rgb(31 41 55 / 0.6), rgb(17 24 39 / 0.8)); border: 1px solid rgb(234 179 8 / 0.15);">
            <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-yellow-500/30 to-transparent"></div>

            <div class="px-4 py-3 border-b border-yellow-600/20 bg-black/20">
              <h2 class="text-lg font-bold text-yellow-500 medieval-font flex items-center gap-2">
                <Mail class="w-5 h-5" />
                Invitaciones Pendientes ({guildData.invites.length})
              </h2>
            </div>

            <div class="divide-y divide-yellow-600/10">
              {guildData.invites.map((invite: any) => (
                <div class="flex items-center justify-between px-4 py-3 group">
                  <div class="flex items-center gap-3">
                    <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-gray-700 to-gray-800 border border-gray-600/50 flex items-center justify-center">
                      <span class="text-xs font-bold text-gray-400">{invite.player_name?.[0]?.toUpperCase() || '?'}</span>
                    </div>
                    <div>
                      <span class="text-white">{invite.player_name}</span>
                      <span class="text-gray-500 text-xs ml-2">Level {invite.player_level}</span>
                    </div>
                  </div>
                  <button class="cancel-invite-btn text-red-400 hover:text-red-300 text-sm"
                          data-player-id={invite.player_id}>
                    Cancelar
                  </button>
                </div>
              ))}
            </div>
          </div>
        )}
      </>
    )}
  </section>
</Layout>

<script is:inline define:vars={{ guildId: id, userMemberCharId: userMemberChar?.id, invitedCharId: invitedChar?.player_id }}>
  window.__GUILD_ID__ = guildId;
  window.__USER_MEMBER_CHAR_ID__ = userMemberCharId;
  window.__INVITED_CHAR_ID__ = invitedCharId;
</script>

<script>
  // Use relative URLs for same-origin requests (avoids cross-domain cookie issues)
  const guildId = (window as any).__GUILD_ID__;
  const userMemberCharId = (window as any).__USER_MEMBER_CHAR_ID__;
  const invitedCharId = (window as any).__INVITED_CHAR_ID__;

  let selectedLogo: string | null = null;

  function init() {
    // Accept invite - NO confirm
    const acceptBtn = document.getElementById('acceptInviteBtn');
    acceptBtn?.addEventListener('click', async () => {
      const playerId = invitedCharId;
      if (!playerId) return;

      try {
        const response = await fetch(`/api/guilds/${guildId}/accept`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          credentials: 'include',
          body: JSON.stringify({ playerId })
        });

        const data = await response.json();
        if (data.success) {
          window.location.reload();
        } else {
          showToast(data.error || 'Error al aceptar la invitación', 'error');
        }
      } catch (error) {
        showToast('Error al aceptar la invitación', 'error');
      }
    });

    // Reject invite - NO confirm
    const rejectBtn = document.getElementById('rejectInviteBtn');
    rejectBtn?.addEventListener('click', async () => {
      const playerId = invitedCharId;
      if (!playerId) return;

      try {
        const response = await fetch(`/api/guilds/${guildId}/reject`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          credentials: 'include',
          body: JSON.stringify({ playerId })
        });

        const data = await response.json();
        if (data.success) {
          window.location.reload();
        } else {
          showToast(data.error || 'Error al rechazar la invitación', 'error');
        }
      } catch (error) {
        showToast('Error al rechazar la invitación', 'error');
      }
    });

    // Delete guild - direct action
    const deleteGuildBtn = document.getElementById('deleteGuildBtn');
    deleteGuildBtn?.addEventListener('click', async () => {
      try {
        const response = await fetch(`/api/guilds/${guildId}`, {
          method: 'DELETE',
          credentials: 'include'
        });

        const data = await response.json();
        if (data.success) {
          window.location.href = '/guilds';
        } else {
          showToast(data.error || 'Error al eliminar la guild', 'error');
        }
      } catch (error) {
        showToast('Error al eliminar la guild', 'error');
      }
    });

    // Leave guild - NO confirm
    const leaveBtn = document.getElementById('leaveGuildBtn');
    leaveBtn?.addEventListener('click', async () => {
      const playerId = userMemberCharId;
      if (!playerId) return;

      try {
        const response = await fetch(`/api/guilds/${guildId}/leave`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          credentials: 'include',
          body: JSON.stringify({ playerId })
        });

        const data = await response.json();
        if (data.success) {
          window.location.href = '/guilds';
        } else {
          showToast(data.error || 'Error al abandonar la guild', 'error');
        }
      } catch (error) {
        showToast('Error al abandonar la guild', 'error');
      }
    });

    // Change rank - NO confirm
    document.querySelectorAll('.change-rank-btn').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        const target = e.currentTarget as HTMLElement;
        const playerId = target.dataset.playerId;
        const newRank = parseInt(target.dataset.newRank || '0');

        try {
          const response = await fetch(`/api/guilds/${guildId}/change-rank`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            credentials: 'include',
            body: JSON.stringify({ playerId: parseInt(playerId || '0'), newRankLevel: newRank })
          });

          const data = await response.json();
          if (data.success) {
            window.location.reload();
          } else {
            showToast(data.error || 'Error al cambiar el rango', 'error');
          }
        } catch (error) {
          showToast('Error al cambiar el rango', 'error');
        }
      });
    });

    // Kick member - NO confirm
    document.querySelectorAll('.kick-member-btn').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        const target = e.currentTarget as HTMLElement;
        const playerId = target.dataset.playerId;

        try {
          const response = await fetch(`/api/guilds/${guildId}/kick`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            credentials: 'include',
            body: JSON.stringify({ playerId: parseInt(playerId || '0') })
          });

          const data = await response.json();
          if (data.success) {
            window.location.reload();
          } else {
            showToast(data.error || 'Error al expulsar al miembro', 'error');
          }
        } catch (error) {
          showToast('Error al expulsar al miembro', 'error');
        }
      });
    });

    // Cancel invite - NO confirm
    document.querySelectorAll('.cancel-invite-btn').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        const target = e.currentTarget as HTMLElement;
        const playerId = target.dataset.playerId;

        try {
          const response = await fetch(`/api/guilds/${guildId}/cancel-invite`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            credentials: 'include',
            body: JSON.stringify({ playerId: parseInt(playerId || '0') })
          });

          const data = await response.json();
          if (data.success) {
            window.location.reload();
          } else {
            showToast(data.error || 'Error al cancelar la invitación', 'error');
          }
        } catch (error) {
          showToast('Error al cancelar la invitación', 'error');
        }
      });
    });

    // Invite form
    const inviteForm = document.getElementById('inviteForm');
    const inviteError = document.getElementById('inviteError');
    inviteForm?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const playerName = (document.getElementById('invitePlayerName') as HTMLInputElement)?.value;

      if (!playerName) return;

      inviteError?.classList.add('hidden');

      try {
        const response = await fetch(`/api/guilds/${guildId}/invite`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          credentials: 'include',
          body: JSON.stringify({ playerName })
        });

        const data = await response.json();
        if (data.success) {
          document.getElementById('inviteModal')?.classList.add('hidden');
          window.location.reload();
        } else {
          if (inviteError) {
            inviteError.textContent = data.error || 'Error al enviar la invitación';
            inviteError.classList.remove('hidden');
          }
        }
      } catch (error) {
        if (inviteError) {
          inviteError.textContent = 'Error al enviar la invitación';
          inviteError.classList.remove('hidden');
        }
      }
    });

    // Logo upload
    const uploadLogoBtn = document.getElementById('uploadLogoBtn');
    const logoModal = document.getElementById('logoModal');
    const logoInput = document.getElementById('logoInput') as HTMLInputElement;
    const logoDropZone = document.getElementById('logoDropZone');
    const logoPreview = document.getElementById('logoPreview');
    const logoPreviewImg = document.getElementById('logoPreviewImg') as HTMLImageElement;
    const removePreview = document.getElementById('removePreview');
    const saveLogo = document.getElementById('saveLogo') as HTMLButtonElement;
    const deleteLogo = document.getElementById('deleteLogo');
    const logoError = document.getElementById('logoError');

    uploadLogoBtn?.addEventListener('click', () => {
      logoModal?.classList.remove('hidden');
    });

    logoDropZone?.addEventListener('click', () => {
      logoInput?.click();
    });

    logoDropZone?.addEventListener('dragover', (e) => {
      e.preventDefault();
      logoDropZone.classList.add('border-yellow-500');
    });

    logoDropZone?.addEventListener('dragleave', () => {
      logoDropZone.classList.remove('border-yellow-500');
    });

    logoDropZone?.addEventListener('drop', (e) => {
      e.preventDefault();
      logoDropZone.classList.remove('border-yellow-500');
      const files = (e as DragEvent).dataTransfer?.files;
      if (files && files.length > 0) {
        handleLogoFile(files[0]);
      }
    });

    logoInput?.addEventListener('change', () => {
      if (logoInput.files && logoInput.files.length > 0) {
        handleLogoFile(logoInput.files[0]);
      }
    });

    function handleLogoFile(file: File) {
      logoError?.classList.add('hidden');

      if (!['image/png', 'image/jpeg', 'image/gif'].includes(file.type)) {
        showLogoError('Solo se permiten imágenes PNG, JPEG o GIF');
        return;
      }

      if (file.size > 500 * 1024) {
        showLogoError('La imagen no debe superar 500KB');
        return;
      }

      const reader = new FileReader();
      reader.onload = (e) => {
        selectedLogo = e.target?.result as string;
        if (logoPreviewImg) {
          logoPreviewImg.src = selectedLogo;
        }
        logoDropZone?.classList.add('hidden');
        logoPreview?.classList.remove('hidden');
        if (saveLogo) saveLogo.disabled = false;
      };
      reader.readAsDataURL(file);
    }

    function showLogoError(message: string) {
      if (logoError) {
        logoError.textContent = message;
        logoError.classList.remove('hidden');
      }
    }

    function showToast(message: string, type: 'success' | 'error') {
      // Simple toast - you can enhance this later
      const toast = document.createElement('div');
      toast.className = `fixed bottom-4 right-4 px-4 py-2 rounded-lg text-white z-50 ${type === 'error' ? 'bg-red-600' : 'bg-green-600'}`;
      toast.textContent = message;
      document.body.appendChild(toast);
      setTimeout(() => toast.remove(), 3000);
    }

    removePreview?.addEventListener('click', () => {
      selectedLogo = null;
      if (logoPreviewImg) logoPreviewImg.src = '';
      logoPreview?.classList.add('hidden');
      logoDropZone?.classList.remove('hidden');
      if (saveLogo) saveLogo.disabled = true;
      if (logoInput) logoInput.value = '';
    });

    saveLogo?.addEventListener('click', async () => {
      if (!selectedLogo) return;

      saveLogo.disabled = true;
      saveLogo.textContent = 'Guardando...';

      try {
        const response = await fetch(`/api/guilds/${guildId}/logo`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          credentials: 'include',
          body: JSON.stringify({ logo: selectedLogo })
        });

        const data = await response.json();
        if (data.success) {
          window.location.reload();
        } else {
          showLogoError(data.error || 'Error al subir el logo');
          saveLogo.disabled = false;
          saveLogo.textContent = 'Guardar Logo';
        }
      } catch (error) {
        showLogoError('Error al subir el logo');
        saveLogo.disabled = false;
        saveLogo.textContent = 'Guardar Logo';
      }
    });

    deleteLogo?.addEventListener('click', async () => {
      try {
        const response = await fetch(`/api/guilds/${guildId}/logo`, {
          method: 'DELETE',
          credentials: 'include'
        });

        const data = await response.json();
        if (data.success) {
          window.location.reload();
        } else {
          showToast(data.error || 'Error al eliminar el logo', 'error');
        }
      } catch (error) {
        showToast('Error al eliminar el logo', 'error');
      }
    });
  }

  init();
  document.addEventListener('astro:page-load', init);
</script>
