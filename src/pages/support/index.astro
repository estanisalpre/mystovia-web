<script>
  function supportForm() {
    return {
      name: "",
      email: "",
      subject: "",
      message: "",
      loading: false,
      success: false,

      async submitTicket() {
        this.loading = true;
        this.success = false;

        try {
          const response = await fetch("/api/support/tickets", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            credentials: "include",
            body: JSON.stringify({
              name: this.name,
              email: this.email,
              subject: this.subject,
              message: this.message,
            }),
          });

          const data = await response.json();

          if (data.success) {
            this.success = true;
            this.name = "";
            this.email = "";
            this.subject = "";
            this.message = "";
          } else {
            alert(data.error || "Error al enviar el ticket");
          }
        } catch (error) {
          console.error("Error:", error);
          alert("Error al enviar el ticket");
        } finally {
          this.loading = false;
        }
      },
    };
  }
</script>
