---
import Layout from "@layouts/Layout.astro";
import { Bug, Ticket, Zap, Mail, Shield } from "@lucide/astro";
import Input from "@ui/Input.astro";
import ErrorMessage from "@ui/ErrorMessage.astro";
import SubmitBtn from "@ui/SubmitBtn.astro";
import WarnErrorSuccessMessage from "@lib/components/shared/WarnErrorSuccessMessage.astro";

let error = "";
const API_URL = import.meta.env.PUBLIC_API_URL || "http://localhost:3000";

// Get user
const accessToken = Astro.cookies.get("accessToken")?.value;
let user = null;

if (accessToken) {
  try {
    const verifyResponse = await fetch(`${API_URL}/api/auth/verify`, {
      headers: { Cookie: `accessToken=${accessToken}` },
    });
    if (verifyResponse.ok) {
      const data = await verifyResponse.json();
      user = data.user;
    }
  } catch (error) {
    console.error("Error verifying user:", error);
  }
}
---

<Layout title="Soporte y Contacto">
  <section class="page-container">
    <!-- Header with medieval style -->
    <div class="mb-6 sm:mb-8 text-center">
      <div class="flex items-center justify-center gap-3 mb-3">
        <div class="h-px w-8 sm:w-12 bg-gradient-to-r from-transparent to-yellow-500/50"></div>
        <svg class="w-4 h-4 text-yellow-500/70" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 0L20 10L10 20L0 10z"/>
        </svg>
        <div class="h-px w-8 sm:w-12 bg-gradient-to-l from-transparent to-yellow-500/50"></div>
      </div>
      <div class="flex items-center justify-center gap-3 mb-3 sm:mb-4">
        <Bug class="w-6 h-6 sm:w-8 sm:h-8 text-yellow-500" />
        <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-yellow-500 medieval-font">Soporte y Contacto</h1>
      </div>
      <p class="text-sm sm:text-base md:text-lg text-gray-400">
        ¿Necesitas ayuda? Envíanos un mensaje y te responderemos pronto
      </p>
    </div>

    {
      user && (
        <div class="mb-6 flex justify-end">
          <a
            href="/support/my-tickets"
            class="flex items-center gap-2 px-4 py-2 text-sm font-semibold text-yellow-500 border border-yellow-500/50 rounded-lg bg-yellow-500/10 hover:bg-yellow-500/20 transition-colors"
          >
            <Ticket class="w-4 h-4" />
            Ver mis tickets
          </a>
        </div>
      )
    }

    <div x-data="supportForm()">
      <div class="relative rounded-xl overflow-hidden p-4 sm:p-6 md:p-8 border border-yellow-600/20 max-w-lg"
           style="background: linear-gradient(to bottom, rgb(17 24 39 / 0.9), rgb(0 0 0 / 0.85));">
        <!-- Diamond pattern overlay -->
        <div class="absolute inset-0 opacity-[0.03] pointer-events-none" style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cpath d=\'M30 0L60 30L30 60L0 30z\' fill=\'%23d4af37\' fill-opacity=\'0.4\'/%3E%3C/svg%3E'); background-size: 30px 30px;"></div>
        <!-- Top golden line -->
        <div class="absolute top-0 left-0 right-0 h-0.5 bg-gradient-to-r from-transparent via-yellow-500/50 to-transparent"></div>

        <form @submit.prevent="submitTicket" class="relative z-10 space-y-5">
          <Input
            id="username"
            label="Nombre completo"
            type="text"
            placeholder="Escribe tu nombre completo"
            required
          />

          <Input
            id="email"
            label="Correo electrónico"
            type="email"
            placeholder="Escribe tu correo electrónico"
            required
          />

          <Input
            id="reason"
            label="Asunto"
            type="text"
            placeholder="¿Cuál es el problema?"
            required
          />

          <div class="form-group">
            <label for="message" class="form-label text-sm text-gray-300">Mensaje</label>
            <textarea
              id="message"
              name="message"
              x-model="message"
              class="form-input h-32 resize-none w-full bg-gray-900/50 border border-yellow-600/30 rounded-lg px-3 py-2 text-sm text-white placeholder-gray-500 focus:border-yellow-500/50 focus:outline-none"
              placeholder="Describe tu problema con el mayor detalle posible..."
              required
            ></textarea>
          </div>

          <ErrorMessage
            message={error}
            visible={!!error}
          />

          <SubmitBtn label="Enviar ticket" />

          <WarnErrorSuccessMessage
            x-show="visible"
            x-transition.opacity.duration.500ms
            :type="messageType"
            :message="feedbackMessage"
          />
        </form>
      </div>
    </div>

    <!-- Info cards -->
    <div class="mt-6 sm:mt-8 grid grid-cols-1 md:grid-cols-3 gap-4">
      <div class="relative rounded-xl overflow-hidden p-4 sm:p-5 border border-yellow-600/20 text-center"
           style="background: linear-gradient(to bottom, rgb(17 24 39 / 0.9), rgb(0 0 0 / 0.85));">
        <div class="absolute top-0 left-0 right-0 h-0.5 bg-gradient-to-r from-transparent via-yellow-500/30 to-transparent"></div>
        <div class="relative z-10">
          <Zap class="w-6 h-6 sm:w-8 sm:h-8 text-yellow-500 mx-auto mb-2" />
          <h3 class="text-sm sm:text-base font-semibold text-white mb-1">Respuesta Rápida</h3>
          <p class="text-xs sm:text-sm text-gray-400">
            Usualmente respondemos en 24-48h
          </p>
        </div>
      </div>

      <div class="relative rounded-xl overflow-hidden p-4 sm:p-5 border border-yellow-600/20 text-center"
           style="background: linear-gradient(to bottom, rgb(17 24 39 / 0.9), rgb(0 0 0 / 0.85));">
        <div class="absolute top-0 left-0 right-0 h-0.5 bg-gradient-to-r from-transparent via-yellow-500/30 to-transparent"></div>
        <div class="relative z-10">
          <Mail class="w-6 h-6 sm:w-8 sm:h-8 text-yellow-500 mx-auto mb-2" />
          <h3 class="text-sm sm:text-base font-semibold text-white mb-1">Notificaciones</h3>
          <p class="text-xs sm:text-sm text-gray-400">Te avisaremos por email</p>
        </div>
      </div>

      <div class="relative rounded-xl overflow-hidden p-4 sm:p-5 border border-yellow-600/20 text-center"
           style="background: linear-gradient(to bottom, rgb(17 24 39 / 0.9), rgb(0 0 0 / 0.85));">
        <div class="absolute top-0 left-0 right-0 h-0.5 bg-gradient-to-r from-transparent via-yellow-500/30 to-transparent"></div>
        <div class="relative z-10">
          <Shield class="w-6 h-6 sm:w-8 sm:h-8 text-yellow-500 mx-auto mb-2" />
          <h3 class="text-sm sm:text-base font-semibold text-white mb-1">Privacidad</h3>
          <p class="text-xs sm:text-sm text-gray-400">Tu información está segura</p>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  function supportForm() {
    return {
      name: "",
      email: "",
      subject: "",
      message: "",
      loading: false,
      success: false,

      async submitTicket() {
        this.loading = true;
        this.success = false;

        try {
          const response = await fetch("/api/support/tickets", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            credentials: "include",
            body: JSON.stringify({
              name: this.name,
              email: this.email,
              subject: this.subject,
              message: this.message,
            }),
          });

          const data = await response.json();

          if (data.success) {
            this.success = true;
            this.name = "";
            this.email = "";
            this.subject = "";
            this.message = "";
          } else {
            alert(data.error || "Error al enviar el ticket");
          }
        } catch (error) {
          console.error("Error:", error);
          alert("Error al enviar el ticket");
        } finally {
          this.loading = false;
        }
      },
    };
  }
</script>
