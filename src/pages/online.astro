---
import Layout from "@layouts/Layout.astro";
import { Users, ChevronRight, Home } from '@lucide/astro';
import DiamondPattern from "../components/ui/DiamondPattern.astro";
import GoldenLine from "../components/ui/GoldenLine.astro";

// Use internal URL for SSR to avoid timeout on Render
const INTERNAL_API_URL = `http://localhost:${process.env.PORT || 3301}`;

interface Player {
  id: number;
  name: string;
  level: number;
  vocation: string;
}

let players: Player[] = [];
let total = 0;

try {
  const response = await fetch(`${INTERNAL_API_URL}/api/server/online`);
  if (response.ok) {
    const data = await response.json();
    players = data.players || [];
    total = data.total || 0;
  }
} catch (error) {
  console.error('Error fetching online players:', error);
}
---

<Layout
  title="Jugadores Online"
  description="Mira quién está jugando ahora en Mystovia. Lista en tiempo real de todos los jugadores conectados con su nivel y vocación."
  keywords="jugadores online mystovia, players online tibia, quien esta jugando, servidor activo"
>
  <section class="page-container max-w-4xl mx-auto">
    <!-- Breadcrumb -->
    <nav class="flex items-center gap-2 text-xs sm:text-sm text-gray-400 mb-6">
      <a href="/" class="hover:text-yellow-500 transition-colors flex items-center gap-1">
        <Home class="w-3 h-3" />
        <span id="onBreadcrumbHome">Inicio</span>
      </a>
      <ChevronRight class="w-3 h-3 text-gray-600" />
      <span id="onBreadcrumbCurrent" class="text-yellow-500">Players Online</span>
    </nav>

    <!-- Header -->
    <header class="text-center mb-8">
      <div class="flex items-center justify-center gap-3 mb-3">
        <div class="h-px w-16 bg-gradient-to-r from-transparent to-yellow-500/50"></div>
        <Users class="w-8 h-8 text-yellow-500" />
        <div class="h-px w-16 bg-gradient-to-l from-transparent to-yellow-500/50"></div>
      </div>
      <h1 id="onTitle" class="text-3xl md:text-4xl font-bold text-yellow-500 medieval-font mb-2">Players Online</h1>
      <p id="onSubtitle" class="text-gray-400" data-total={total}>
        {total === 0 ? 'No hay jugadores online' : `${total} jugador${total !== 1 ? 'es' : ''} online`}
      </p>
    </header>

    <!-- Players Table -->
    <div class="relative rounded-xl overflow-hidden"
         style="background: linear-gradient(to bottom, rgb(31 41 55 / 0.6), rgb(17 24 39 / 0.8)); border: 1px solid rgb(234 179 8 / 0.15);">
      <GoldenLine position="top" opacity={0.3} />
      <DiamondPattern opacity={0.02} class="rounded-xl" />

      {players.length === 0 ? (
        <div class="py-16 text-center">
          <Users class="w-16 h-16 mx-auto text-yellow-500/30 mb-4" />
          <p id="onNoPlayersTitle" class="text-gray-400 text-lg mb-2">No hay jugadores online</p>
          <p id="onNoPlayersDesc" class="text-gray-500 text-sm">El servidor está vacío en este momento</p>
        </div>
      ) : (
        <>
          <!-- Table Header -->
          <div class="hidden sm:grid grid-cols-12 gap-2 px-4 py-3 text-sm text-yellow-500 font-semibold border-b border-yellow-600/20 bg-black/20">
            <div id="onHeaderName" class="col-span-5">Nombre</div>
            <div id="onHeaderVocation" class="col-span-4">Vocación</div>
            <div id="onHeaderLevel" class="col-span-3 text-right">Nivel</div>
          </div>

          <!-- Players List -->
          <div class="divide-y divide-yellow-600/10">
            {players.map((player) => (
              <a href={`/character-information?name=${encodeURIComponent(player.name)}`}
                 class="block sm:grid sm:grid-cols-12 gap-2 px-4 py-4 transition-all duration-300 hover:bg-yellow-500/5 group">
                <!-- Desktop Layout -->
                <div class="hidden sm:flex col-span-5 items-center gap-3">
                  <div class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></div>
                  <span class="text-white font-semibold group-hover:text-yellow-500 transition-colors">{player.name}</span>
                </div>
                <div class="hidden sm:flex col-span-4 items-center text-gray-400">
                  {player.vocation}
                </div>
                <div class="hidden sm:flex col-span-3 items-center justify-end text-yellow-500 font-bold medieval-font">
                  {player.level}
                </div>

                <!-- Mobile Layout -->
                <div class="sm:hidden">
                  <div class="flex items-center gap-2 mb-1">
                    <div class="w-2 h-2 rounded-full bg-green-500 animate-pulse"></div>
                    <span class="text-white font-semibold group-hover:text-yellow-500 transition-colors">{player.name}</span>
                  </div>
                  <div class="flex justify-between text-sm pl-4">
                    <span class="text-gray-400">{player.vocation}</span>
                    <span class="text-yellow-500 font-bold">Level {player.level}</span>
                  </div>
                </div>
              </a>
            ))}
          </div>
        </>
      )}
    </div>
  </section>
</Layout>

<script>
  import { t, getStoredLanguage } from '../i18n/translations';

  function applyTranslations() {
    const lang = getStoredLanguage();

    const onBreadcrumbHome = document.getElementById('onBreadcrumbHome');
    if (onBreadcrumbHome) onBreadcrumbHome.textContent = t('pages.home', lang);

    const onBreadcrumbCurrent = document.getElementById('onBreadcrumbCurrent');
    if (onBreadcrumbCurrent) onBreadcrumbCurrent.textContent = t('pages.online.title', lang);

    const onTitle = document.getElementById('onTitle');
    if (onTitle) onTitle.textContent = t('pages.online.title', lang);

    const onSubtitle = document.getElementById('onSubtitle');
    if (onSubtitle) {
      const total = parseInt(onSubtitle.dataset.total || '0');
      if (total === 0) {
        onSubtitle.textContent = t('pages.online.noPlayers', lang);
      } else if (total === 1) {
        onSubtitle.textContent = `1 ${t('pages.online.playerOnline', lang)}`;
      } else {
        onSubtitle.textContent = `${total} ${t('pages.online.playersOnline', lang)}`;
      }
    }

    const onNoPlayersTitle = document.getElementById('onNoPlayersTitle');
    if (onNoPlayersTitle) onNoPlayersTitle.textContent = t('pages.online.noPlayers', lang);

    const onNoPlayersDesc = document.getElementById('onNoPlayersDesc');
    if (onNoPlayersDesc) onNoPlayersDesc.textContent = t('pages.online.serverEmpty', lang);

    const onHeaderName = document.getElementById('onHeaderName');
    if (onHeaderName) onHeaderName.textContent = t('pages.online.name', lang);

    const onHeaderVocation = document.getElementById('onHeaderVocation');
    if (onHeaderVocation) onHeaderVocation.textContent = t('pages.online.vocation', lang);

    const onHeaderLevel = document.getElementById('onHeaderLevel');
    if (onHeaderLevel) onHeaderLevel.textContent = t('pages.online.level', lang);
  }

  applyTranslations();
  document.addEventListener('astro:page-load', applyTranslations);
</script>
