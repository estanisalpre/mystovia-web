---
export const prerender = false;

import Layout from '../../../layouts/Layout.astro';
import { hasPermission } from '../../../utils/permissions';
import {
  ChevronRight,
  Home,
  User,
  Eye,
  Calendar,
  Pin,
  Lock,
  MessageSquare,
  ThumbsUp,
  ThumbsDown,
  Trash2,
  Send,
  AlertTriangle
} from '@lucide/astro';
import DiamondPattern from "../../../components/ui/DiamondPattern.astro";
import GoldenLine from "../../../components/ui/GoldenLine.astro";

// Helper function to format vote count
function formatVotes(votes: number): string {
  if (votes > 0) return `+${votes}`;
  if (votes < 0) return `${votes}`;
  return '0';
}

const { id } = Astro.params;

// For internal SSR calls, use localhost with the same port (same Express server)
const INTERNAL_API_URL = `http://localhost:${process.env.PORT || 3301}`;

// Get user from cookies and verify with API
const userId = Astro.cookies.get('userId')?.value;
const userEmail = Astro.cookies.get('userEmail')?.value;
let user = null;

if (userId && userEmail) {
  try {
    // Use internal URL for SSR verification (same server, no cross-origin issues)
    const verifyResponse = await fetch(`${INTERNAL_API_URL}/api/auth/verify`, {
      method: 'GET',
      headers: {
        'Cookie': `userId=${userId}; userEmail=${userEmail}`,
        'Content-Type': 'application/json'
      }
    });
    if (verifyResponse.ok) {
      const data = await verifyResponse.json();
      if (data.success && data.user) {
        user = data.user;
        console.log('User verified:', user.accountName, 'groupId:', user.groupId);
      }
    } else {
      console.log('Verify response not ok:', verifyResponse.status);
    }
  } catch (error) {
    console.error('Error verifying user:', error);
  }
} else {
  console.log('No userId or userEmail cookies found');
}

const canWriteForum = hasPermission(user?.groupId, 'write_forum');
const canManageForum = hasPermission(user?.groupId, 'manage_forum');

// Get user characters
let userCharacters: any[] = [];
if (userId) {
  try {
    const charactersResponse = await fetch(`${INTERNAL_API_URL}/api/characters`, {
      headers: { Cookie: `userId=${userId}` }
    });
    if (charactersResponse.ok) {
      const data = await charactersResponse.json();
      userCharacters = data.characters || [];
    }
  } catch (error) {
    console.error('Error fetching user characters:', error);
  }
}

// Fetch topic
let topicData;

try {
  const response = await fetch(`${INTERNAL_API_URL}/api/forum/topics/${id}`);
  topicData = await response.json();

  if (!topicData.success) {
    return Astro.redirect('/forum');
  }
} catch (error) {
  console.error('Error fetching topic:', error);
  return Astro.redirect('/forum');
}

const { topic, comments } = topicData;
---

<Layout title={`${topic.title} | Foro Mystovia`}>
  <section class="page-container max-w-5xl mx-auto">
    <!-- Breadcrumb -->
    <nav class="flex items-center gap-2 text-xs sm:text-sm text-gray-400 mb-4 sm:mb-6 flex-wrap">
      <a href="/" class="hover:text-yellow-500 transition-colors flex items-center gap-1">
        <Home class="w-3 h-3" />
        Inicio
      </a>
      <ChevronRight class="w-3 h-3 text-gray-600" />
      <a href="/forum" class="hover:text-yellow-500 transition-colors">Foro</a>
      <ChevronRight class="w-3 h-3 text-gray-600" />
      <a href={`/forum/category/${topic.category_id}`} class="hover:text-yellow-500 transition-colors">Categoría</a>
      <ChevronRight class="w-3 h-3 text-gray-600" />
      <span class="text-yellow-500 truncate max-w-[150px] sm:max-w-none">{topic.title}</span>
    </nav>

    <!-- Topic Card -->
    <div class="relative overflow-hidden rounded-xl mb-6">
      <!-- Medieval container background -->
      <div class="absolute inset-0 bg-gradient-to-b from-gray-900/95 via-gray-900/98 to-black/95 border border-yellow-600/20 rounded-xl"></div>

      <GoldenLine position="top" />
      <DiamondPattern opacity={0.03} class="rounded-xl" />

      <!-- Content -->
      <div class="relative z-10 p-4 sm:p-6">
        <div class="flex gap-4">
          <!-- Vote Buttons -->
          <div class="flex flex-col items-center gap-1 min-w-[50px]">
            <button
              id="voteUp"
              data-topic-id={topic.id}
              class="p-2 rounded-lg hover:bg-green-500/20 transition-all text-gray-400 hover:text-green-500 hover:scale-110"
              disabled={!user}
              title="Me gusta"
            >
              <ThumbsUp class="w-5 h-5" />
            </button>
            <span
              id="voteCount"
              data-votes={topic.total_votes || 0}
              class:list={[
                'text-xl font-bold transition-all',
                topic.total_votes > 0 && 'text-green-500',
                topic.total_votes < 0 && 'text-red-500',
                (!topic.total_votes || topic.total_votes === 0) && 'text-white'
              ]}
            >
              {formatVotes(topic.total_votes || 0)}
            </span>
            <button
              id="voteDown"
              data-topic-id={topic.id}
              class="p-2 rounded-lg hover:bg-red-500/20 transition-all text-gray-400 hover:text-red-500 hover:scale-110"
              disabled={!user}
              title="No me gusta"
            >
              <ThumbsDown class="w-5 h-5" />
            </button>
          </div>

          <!-- Topic Content -->
          <div class="flex-1 min-w-0">
            <!-- Badges -->
            <div class="flex items-center gap-2 mb-3 flex-wrap">
              {topic.is_pinned && (
                <span class="inline-flex items-center gap-1 text-xs bg-amber-500/20 text-amber-400 px-2 py-1 rounded-lg border border-amber-500/30">
                  <Pin class="w-3 h-3" />
                  Fijado
                </span>
              )}
              {topic.is_locked && (
                <span class="inline-flex items-center gap-1 text-xs bg-red-500/20 text-red-400 px-2 py-1 rounded-lg border border-red-500/30">
                  <Lock class="w-3 h-3" />
                  Cerrado
                </span>
              )}
            </div>

            <!-- Title -->
            <h1 class="text-xl sm:text-2xl md:text-3xl font-bold text-white medieval-font mb-4">
              {topic.title}
            </h1>

            <!-- Meta info -->
            <div class="flex items-center gap-3 sm:gap-4 text-xs sm:text-sm text-gray-400 mb-4 flex-wrap">
              <span class="flex items-center gap-1">
                <User class="w-4 h-4 text-yellow-500/70" />
                <span class="text-yellow-500">{topic.author_name}</span>
              </span>
              <span class="flex items-center gap-1">
                <Calendar class="w-4 h-4 text-yellow-500/70" />
                {new Date(topic.created_at).toLocaleDateString('es-ES', { year: 'numeric', month: 'long', day: 'numeric' })}
              </span>
              <span class="flex items-center gap-1">
                <Eye class="w-4 h-4 text-yellow-500/70" />
                {topic.views_count} vistas
              </span>
            </div>

            <!-- Content -->
            <div class="prose prose-invert prose-yellow max-w-none text-gray-300 leading-relaxed" set:html={topic.content}></div>

            <!-- Admin Actions -->
            {canManageForum && (
              <div class="flex gap-2 mt-6 pt-4 border-t border-gray-700/50 flex-wrap">
                <button
                  id="togglePinBtn"
                  data-topic-id={topic.id}
                  data-is-pinned={topic.is_pinned}
                  class="inline-flex items-center gap-2 px-3 py-2 text-xs font-medium bg-gray-800/80 hover:bg-gray-700/80 text-gray-300 rounded-lg border border-gray-700/50 transition-colors"
                >
                  <Pin class="w-3 h-3" />
                  {topic.is_pinned ? 'Desfijar' : 'Fijar'}
                </button>
                <button
                  id="toggleLockBtn"
                  data-topic-id={topic.id}
                  data-is-locked={topic.is_locked}
                  class="inline-flex items-center gap-2 px-3 py-2 text-xs font-medium bg-gray-800/80 hover:bg-gray-700/80 text-gray-300 rounded-lg border border-gray-700/50 transition-colors"
                >
                  <Lock class="w-3 h-3" />
                  {topic.is_locked ? 'Desbloquear' : 'Bloquear'}
                </button>
                <button
                  id="deleteTopicBtn"
                  data-topic-id={topic.id}
                  class="inline-flex items-center gap-2 px-3 py-2 text-xs font-medium bg-red-500/20 hover:bg-red-500/30 text-red-400 rounded-lg border border-red-500/30 transition-colors"
                >
                  <Trash2 class="w-3 h-3" />
                  Eliminar
                </button>
              </div>
            )}
          </div>
        </div>
      </div>
    </div>

    <!-- Comments Section -->
    <div class="mb-6">
      <div class="flex items-center gap-3 mb-4">
        <MessageSquare class="w-5 h-5 text-yellow-500" />
        <h2 class="text-lg sm:text-xl font-bold text-white medieval-font">
          Respuestas ({comments.length})
        </h2>
      </div>

      {comments.length === 0 ? (
        <div class="relative overflow-hidden rounded-xl p-6 text-center">
          <div class="absolute inset-0 bg-gradient-to-b from-gray-900/80 to-black/80 border border-gray-700/30 rounded-xl"></div>
          <p class="relative z-10 text-gray-400">No hay respuestas aún. ¡Sé el primero en comentar!</p>
        </div>
      ) : (
        <div class="space-y-4">
          {comments.map((comment: any) => (
            <div class="relative overflow-hidden rounded-xl">
              <div class="absolute inset-0 bg-gradient-to-b from-gray-900/90 to-black/90 border border-gray-700/30 rounded-xl"></div>
              <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-gray-600/30 to-transparent"></div>

              <div class="relative z-10 p-4">
                <div class="flex items-start gap-3">
                  <!-- Avatar -->
                  <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-yellow-600/30 to-yellow-800/30 border border-yellow-500/20 flex items-center justify-center flex-shrink-0">
                    <span class="text-sm font-bold text-yellow-500">
                      {comment.author_name[0].toUpperCase()}
                    </span>
                  </div>

                  <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-2 mb-2 flex-wrap">
                      <span class="font-semibold text-yellow-500">{comment.author_name}</span>
                      <span class="text-xs text-gray-500">
                        {new Date(comment.created_at).toLocaleDateString('es-ES', { day: 'numeric', month: 'short', year: 'numeric' })}
                      </span>
                    </div>

                    <p class="text-gray-300 text-sm leading-relaxed">{comment.content}</p>

                    {canManageForum && (
                      <button
                        data-comment-id={comment.id}
                        class="delete-comment-btn inline-flex items-center gap-1 mt-3 px-2 py-1 text-xs text-red-400 hover:text-red-300 hover:bg-red-500/20 rounded transition-colors"
                      >
                        <Trash2 class="w-3 h-3" />
                        Eliminar
                      </button>
                    )}
                  </div>
                </div>
              </div>
            </div>
          ))}
        </div>
      )}
    </div>

    <!-- Comment Form -->
    {canWriteForum && !topic.is_locked ? (
      <div class="relative overflow-hidden rounded-xl">
        <div class="absolute inset-0 bg-gradient-to-b from-gray-900/95 via-gray-900/98 to-black/95 border border-yellow-600/20 rounded-xl"></div>
        <div class="absolute top-0 left-0 right-0 h-0.5 bg-gradient-to-r from-transparent via-yellow-500/50 to-transparent"></div>

        <div class="relative z-10 p-4 sm:p-6">
          <h3 class="text-lg font-bold text-white medieval-font mb-4 flex items-center gap-2">
            <Send class="w-4 h-4 text-yellow-500" />
            Agregar Respuesta
          </h3>

          <form id="commentForm" class="space-y-4">
            <!-- Character Select -->
            <div class="space-y-2">
              <label class="flex items-center gap-2 text-sm font-semibold text-gray-300">
                <User class="w-4 h-4 text-yellow-500/70" />
                Responder como
              </label>
              <div class="relative">
                <select
                  id="commentCharacterId"
                  class="w-full px-4 py-3 bg-gray-800/80 border border-gray-700/50 rounded-lg text-white focus:outline-none focus:border-yellow-500/50 focus:ring-1 focus:ring-yellow-500/30 transition-all appearance-none cursor-pointer"
                  required
                >
                  {userCharacters.length === 0 ? (
                    <option value="">No tienes personajes</option>
                  ) : (
                    <>
                      <option value="">Selecciona un personaje</option>
                      {userCharacters.map((char: any) => (
                        <option value={char.id}>
                          {char.name} - Nivel {char.level} {char.vocation}
                        </option>
                      ))}
                    </>
                  )}
                </select>
                <div class="absolute right-3 top-1/2 -translate-y-1/2 pointer-events-none">
                  <ChevronRight class="w-4 h-4 text-gray-400 rotate-90" />
                </div>
              </div>
              {userCharacters.length === 0 && (
                <p class="text-xs text-yellow-500/70 flex items-center gap-1">
                  <AlertTriangle class="w-3 h-3" fill="currentColor" />
                  Necesitas crear un personaje para responder
                </p>
              )}
            </div>

            <textarea
              id="commentContent"
              class="w-full px-4 py-3 bg-gray-800/80 border border-gray-700/50 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-yellow-500/50 focus:ring-1 focus:ring-yellow-500/30 transition-all resize-y"
              placeholder="Escribe tu respuesta..."
              rows="4"
              required
            ></textarea>

            <div class="flex justify-end">
              <button
                type="submit"
                id="submitCommentBtn"
                class="flex items-center gap-2 px-6 py-3 bg-gradient-to-b from-yellow-600 to-yellow-700 hover:from-yellow-500 hover:to-yellow-600 text-white font-semibold rounded-lg transition-all duration-300 border border-yellow-500/30 shadow-[0_0_15px_rgba(202,138,4,0.2)] hover:shadow-[0_0_20px_rgba(202,138,4,0.4)]"
              >
                <Send class="w-4 h-4" />
                Publicar Respuesta
              </button>
            </div>
          </form>
        </div>
      </div>
    ) : !canWriteForum ? (
      <div class="relative overflow-hidden rounded-xl p-4">
        <div class="absolute inset-0 bg-blue-500/10 border border-blue-500/30 rounded-xl"></div>
        <p class="relative z-10 text-blue-300 text-sm text-center">
          <a href="/login" class="text-yellow-500 hover:text-yellow-400 font-semibold">Inicia sesión</a> para responder a este tema.
        </p>
      </div>
    ) : (
      <div class="relative overflow-hidden rounded-xl p-4">
        <div class="absolute inset-0 bg-amber-500/10 border border-amber-500/30 rounded-xl"></div>
        <p class="relative z-10 text-amber-300 text-sm text-center flex items-center justify-center gap-2">
          <Lock class="w-4 h-4" />
          Este tema está cerrado y no acepta nuevas respuestas.
        </p>
      </div>
    )}
  </section>
</Layout>

<script define:vars={{ topicId: topic.id }}>
  // Helper function to format votes
  function formatVotes(votes) {
    if (votes > 0) return `+${votes}`;
    if (votes < 0) return `${votes}`;
    return '0';
  }

  // Vote buttons
  const voteUpBtn = document.getElementById('voteUp');
  const voteDownBtn = document.getElementById('voteDown');
  const voteCount = document.getElementById('voteCount');

  async function vote(direction) {
    try {
      const response = await fetch(`/api/forum/topics/${topicId}/vote`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify({ vote: direction })
      });

      const data = await response.json();
      if (data.success) {
        const votes = data.totalVotes;
        voteCount.textContent = formatVotes(votes);
        voteCount.dataset.votes = votes;

        // Update colors with animation
        voteCount.style.transform = 'scale(1.2)';
        setTimeout(() => {
          voteCount.style.transform = 'scale(1)';
        }, 150);

        // Update class based on vote count
        voteCount.className = 'text-xl font-bold transition-all ' +
          (votes > 0 ? 'text-green-500' : votes < 0 ? 'text-red-500' : 'text-white');

        // Update button states to show user's vote
        if (direction === 1) {
          voteUpBtn.classList.add('text-green-500');
          voteUpBtn.classList.remove('text-gray-400');
          voteDownBtn.classList.remove('text-red-500');
          voteDownBtn.classList.add('text-gray-400');
        } else {
          voteDownBtn.classList.add('text-red-500');
          voteDownBtn.classList.remove('text-gray-400');
          voteUpBtn.classList.remove('text-green-500');
          voteUpBtn.classList.add('text-gray-400');
        }
      }
    } catch (error) {
      console.error('Error voting:', error);
    }
  }

  voteUpBtn?.addEventListener('click', () => vote(1));
  voteDownBtn?.addEventListener('click', () => vote(-1));

  // Comment form
  const commentForm = document.getElementById('commentForm');
  const commentCharacterSelect = document.getElementById('commentCharacterId');
  const commentContent = document.getElementById('commentContent');
  const submitCommentBtn = document.getElementById('submitCommentBtn');

  commentForm?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const characterId = commentCharacterSelect?.value;
    const content = commentContent.value.trim();

    if (!characterId || !content) {
      alert('Por favor selecciona un personaje y escribe tu respuesta');
      return;
    }

    submitCommentBtn.disabled = true;
    const originalContent = submitCommentBtn.innerHTML;
    submitCommentBtn.innerHTML = `
      <svg class="w-4 h-4 animate-spin" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      <span>Publicando...</span>
    `;

    try {
      const response = await fetch(`/api/forum/topics/${topicId}/comments`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        credentials: 'include',
        body: JSON.stringify({ characterId: parseInt(characterId), content })
      });

      const data = await response.json();

      if (data.success) {
        window.location.reload();
      } else {
        alert(data.error || 'Error al publicar respuesta');
        submitCommentBtn.disabled = false;
        submitCommentBtn.innerHTML = originalContent;
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error al publicar respuesta');
      submitCommentBtn.disabled = false;
      submitCommentBtn.innerHTML = originalContent;
    }
  });

  // Admin actions
  const togglePinBtn = document.getElementById('togglePinBtn');
  const toggleLockBtn = document.getElementById('toggleLockBtn');
  const deleteTopicBtn = document.getElementById('deleteTopicBtn');

  togglePinBtn?.addEventListener('click', async () => {
    const isPinned = togglePinBtn.dataset.isPinned === 'true';
    if (!confirm(`¿${isPinned ? 'Desfijar' : 'Fijar'} este tema?`)) return;

    try {
      const response = await fetch(`/api/forum/topics/${topicId}/pin`, {
        method: 'PATCH',
        credentials: 'include'
      });

      if (response.ok) {
        window.location.reload();
      } else {
        alert('Error al cambiar el estado');
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error al cambiar el estado');
    }
  });

  toggleLockBtn?.addEventListener('click', async () => {
    const isLocked = toggleLockBtn.dataset.isLocked === 'true';
    if (!confirm(`¿${isLocked ? 'Desbloquear' : 'Bloquear'} este tema?`)) return;

    try {
      const response = await fetch(`/api/forum/topics/${topicId}/lock`, {
        method: 'PATCH',
        credentials: 'include'
      });

      if (response.ok) {
        window.location.reload();
      } else {
        alert('Error al cambiar el estado');
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error al cambiar el estado');
    }
  });

  deleteTopicBtn?.addEventListener('click', async () => {
    if (!confirm('¿Estás seguro de eliminar este tema? Esta acción no se puede deshacer.')) return;

    try {
      const response = await fetch(`/api/forum/topics/${topicId}`, {
        method: 'DELETE',
        credentials: 'include'
      });

      if (response.ok) {
        window.location.href = '/forum';
      } else {
        alert('Error al eliminar el tema');
      }
    } catch (error) {
      console.error('Error:', error);
      alert('Error al eliminar el tema');
    }
  });

  // Delete comment buttons
  document.querySelectorAll('.delete-comment-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      const commentId = btn.dataset.commentId;
      if (!confirm('¿Eliminar este comentario?')) return;

      try {
        const response = await fetch(`/api/forum/comments/${commentId}`, {
          method: 'DELETE',
          credentials: 'include'
        });

        if (response.ok) {
          window.location.reload();
        } else {
          alert('Error al eliminar el comentario');
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Error al eliminar el comentario');
      }
    });
  });
</script>

<style>
  .prose {
    color: inherit;
  }
  .prose p {
    margin-bottom: 1em;
  }
  .prose a {
    color: #eab308;
  }
  .prose a:hover {
    color: #facc15;
  }
</style>
