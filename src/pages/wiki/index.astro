---
import Layout from '../../layouts/Layout.astro';
import { Diamond } from '@lucide/astro';
import DiamondPattern from "../../components/ui/DiamondPattern.astro";
import GoldenLine from "../../components/ui/GoldenLine.astro";

// Use internal URL for SSR to avoid timeout on Render
const INTERNAL_API_URL = `http://localhost:${process.env.PORT || 3301}`;

let categoriesData;

try {
  const response = await fetch(`${INTERNAL_API_URL}/api/wiki/categories`);
  categoriesData = await response.json();
} catch (error) {
  console.error('Error fetching categories:', error);
  categoriesData = { categories: [] };
}

const categories = categoriesData?.categories || [];
---

<Layout title="Wiki del Servidor">
  <section class="page-container">
    <!-- Header with medieval style -->
    <div class="mb-6 sm:mb-8 text-center">
      <div class="flex items-center justify-center gap-3 mb-3">
        <div class="h-px w-8 sm:w-12 bg-gradient-to-r from-transparent to-yellow-500/50"></div>
        <Diamond class="w-4 h-4 text-yellow-500/70" fill="currentColor" />
        <div class="h-px w-8 sm:w-12 bg-gradient-to-l from-transparent to-yellow-500/50"></div>
      </div>
      <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-3 sm:mb-4 text-yellow-500 medieval-font">Wiki del Servidor</h1>
      <p class="text-sm sm:text-base md:text-lg text-gray-400">
        Todo lo que necesitas saber sobre el servidor
      </p>
    </div>

    {categories.length === 0 ? (
      <div class="text-center py-8 sm:py-12">
        <p class="text-sm sm:text-base text-gray-400">No hay categorías disponibles aún.</p>
      </div>
    ) : (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
        {categories.map((category: any) => (
          <a href={`/wiki/${category.slug}`} class="relative rounded-xl overflow-hidden p-4 sm:p-6 border border-yellow-600/20 hover:border-yellow-500/40 transition-all duration-300 group"
             style="background: linear-gradient(to bottom, rgb(17 24 39 / 0.9), rgb(0 0 0 / 0.85));">
            <DiamondPattern opacity={0.03} class="rounded-xl" />
            <GoldenLine position="top" opacity={0.4} class="group-hover:opacity-60 transition-all" />

            <h2 class="text-lg sm:text-xl md:text-2xl font-bold text-yellow-500 mb-2 medieval-font relative z-10">{category.name}</h2>
            {category.description && (
              <p class="text-xs sm:text-sm text-gray-400 mb-3 sm:mb-4 relative z-10">{category.description}</p>
            )}
            <div class="flex justify-between items-center relative z-10">
              <span class="text-xs sm:text-sm bg-yellow-500/20 text-yellow-500 px-2 py-1 rounded border border-yellow-500/30">{category.articles_count || 0} artículos</span>
              <span class="text-yellow-500 text-sm group-hover:translate-x-1 transition-transform">Ver →</span>
            </div>
          </a>
        ))}
      </div>
    )}
  </section>
</Layout>
