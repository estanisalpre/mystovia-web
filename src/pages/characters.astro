---
import Layout from "../layouts/Layout.astro";
import DiamondPattern from "../components/ui/DiamondPattern.astro";
import GoldenLine from "../components/ui/GoldenLine.astro";
import CornerOrnaments from "../components/ui/CornerOrnaments.astro";
import { Star } from "@lucide/astro";
---

<Layout
  title="Mis Personajes"
  description="Gestiona tus personajes de Mystovia. Consulta estadísticas, nivel, experiencia y progreso de todos tus personajes."
  keywords="mis personajes mystovia, personajes tibia, estadisticas personaje, cuenta tibia"
>
  <section class="page-container">
    <div class="max-w-5xl w-full mx-auto">
      <!-- Header with decorative elements -->
      <div class="flex flex-col sm:flex-row justify-between items-center mb-8 gap-4">
        <div class="flex items-center gap-3">
          <div class="h-px w-12 bg-gradient-to-r from-transparent to-yellow-500/50"></div>
          <Star class="w-5 h-5 text-yellow-500/60" fill="currentColor" />
          <h2 class="text-3xl font-bold text-white medieval-font">Mis Personajes</h2>
          <Star class="w-5 h-5 text-yellow-500/60" fill="currentColor" />
          <div class="h-px w-12 bg-gradient-to-l from-transparent to-yellow-500/50"></div>
        </div>
        <a
          href="/create-character"
          class="px-6 py-3 bg-gradient-to-r from-yellow-600 to-yellow-500 hover:from-yellow-500 hover:to-yellow-400 text-black font-bold rounded-lg transition-all border border-yellow-400/30"
        >
          + Crear Personaje
        </a>
      </div>

      <!-- Characters Grid -->
      <div
        id="charactersGrid"
        class="grid md:grid-cols-2 lg:grid-cols-3 gap-6"
      >
        <div class="col-span-full text-gray-400 text-center py-12">
          Cargando personajes...
        </div>
      </div>

      <!-- Empty State (will be shown if no characters) -->
      <div
        id="emptyState"
        class="hidden relative rounded-xl overflow-hidden"
      >
        <!-- Medieval container background -->
        <div class="absolute inset-0 bg-gradient-to-b from-gray-900/95 via-gray-900/98 to-black/95 border border-yellow-600/20 rounded-xl"></div>

        <GoldenLine position="top" />
        <DiamondPattern opacity={0.03} class="rounded-xl" />
        <CornerOrnaments variant="curve" size="sm" opacity={0.2} />

        <div class="relative z-10 p-12 text-center">
          <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-yellow-500/10 border border-yellow-500/20 flex items-center justify-center">
            <span class="text-4xl">⚔️</span>
          </div>
          <h3 class="text-2xl font-bold mb-4 text-white medieval-font">No tienes personajes aún</h3>
          <p class="text-gray-400 mb-6">
            Crea tu primer personaje para comenzar tu aventura en Mystovia
          </p>
          <a
            href="/create-character"
            class="inline-block px-8 py-4 bg-gradient-to-r from-yellow-600 to-yellow-500 hover:from-yellow-500 hover:to-yellow-400 text-black font-bold rounded-lg transition-all border border-yellow-400/30"
          >
            Crear mi primer personaje
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
  const charactersGrid = document.getElementById("charactersGrid")!;
  const emptyState = document.getElementById("emptyState")!;
  const API_URL = import.meta.env.PUBLIC_API_URL;

  // Check authentication using cookie-based auth
  async function checkAuth() {
    try {
      const response = await fetch(`${API_URL}/api/auth/verify`, {
        credentials: 'include',
      });

      if (!response.ok) {
        // Not authenticated, redirect to login
        window.location.href = "/login";
        return false;
      }

      return true;
    } catch (error) {
      window.location.href = "/login";
      return false;
    }
  }

  async function loadCharacters() {
    try {
      const response = await fetch(`${API_URL}/api/characters`, {
        credentials: 'include',
      });

      if (!response.ok) {
        throw new Error("Failed to load characters");
      }

      const data = await response.json();

      if (data.characters.length === 0) {
        // Show empty state
        charactersGrid.classList.add("hidden");
        emptyState.classList.remove("hidden");
      } else {
        // Show characters grid
        charactersGrid.classList.remove("hidden");
        emptyState.classList.add("hidden");

        charactersGrid.innerHTML = data.characters
          .map(
            (char: any) => `
          <div class="relative rounded-xl overflow-hidden hover:scale-[1.02] transition-transform">
            <!-- Medieval container background -->
            <div class="absolute inset-0 bg-gradient-to-b from-gray-900/95 via-gray-900/98 to-black/95 border border-yellow-600/20 rounded-xl"></div>

            <!-- Top golden line -->
            <div class="absolute top-0 left-0 right-0 h-0.5 bg-gradient-to-r from-transparent via-yellow-500/50 to-transparent"></div>

            <!-- Diamond pattern overlay -->
            <div class="absolute inset-0 opacity-[0.03] pointer-events-none rounded-xl" style="background-image: url('data:image/svg+xml,%3Csvg width=\\'60\\' height=\\'60\\' viewBox=\\'0 0 60 60\\' xmlns=\\'http://www.w3.org/2000/svg\\'%3E%3Cpath d=\\'M30 0L60 30L30 60L0 30z\\' fill=\\'%23d4af37\\' fill-opacity=\\'0.4\\'/%3E%3C/svg%3E'); background-size: 30px 30px;"></div>

            <!-- Corner ornaments -->
            <div class="absolute top-1.5 left-1.5 w-4 h-4 opacity-20 pointer-events-none">
              <svg viewBox="0 0 100 100" fill="none" class="w-full h-full text-yellow-500">
                <path d="M0 0 L40 0 Q0 0 0 40 Z" fill="currentColor"/>
              </svg>
            </div>
            <div class="absolute top-1.5 right-1.5 w-4 h-4 opacity-20 pointer-events-none" style="transform: scaleX(-1);">
              <svg viewBox="0 0 100 100" fill="none" class="w-full h-full text-yellow-500">
                <path d="M0 0 L40 0 Q0 0 0 40 Z" fill="currentColor"/>
              </svg>
            </div>

            <div class="relative z-10 p-6">
              <div class="flex items-start justify-between mb-4">
                <div class="flex-1">
                  <h3 class="text-xl font-bold text-yellow-500 mb-1 medieval-font">${char.name}</h3>
                  <p class="text-sm text-gray-400">Level ${char.level} ${char.vocationName}</p>
                </div>
                <div class="text-3xl opacity-60">⚔️</div>
              </div>

              <!-- Decorative divider -->
              <div class="flex items-center gap-2 mb-4">
                <div class="flex-1 h-px bg-gradient-to-r from-transparent via-yellow-500/30 to-transparent"></div>
              </div>

              <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                  <span class="text-gray-400">Health:</span>
                  <span class="text-red-400 font-semibold">${char.health}/${char.healthmax}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-400">Mana:</span>
                  <span class="text-blue-400 font-semibold">${char.mana}/${char.manamax}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-400">Soul:</span>
                  <span class="text-purple-400 font-semibold">${char.soul}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-400">Capacity:</span>
                  <span class="text-green-400 font-semibold">${char.cap}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-400">Magic Level:</span>
                  <span class="text-cyan-400 font-semibold">${char.maglevel}</span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-400">Experience:</span>
                  <span class="text-yellow-400 font-semibold">${char.experience.toLocaleString()}</span>
                </div>
              </div>

              ${char.lastlogin > 0 ? `
                <div class="mt-4 pt-4 border-t border-yellow-600/20">
                  <p class="text-xs text-gray-500">
                    Último login: ${new Date(char.lastlogin * 1000).toLocaleDateString('es-ES')}
                  </p>
                </div>
              ` : ''}
            </div>
          </div>
        `
          )
          .join("");
      }
    } catch (error) {
      charactersGrid.innerHTML =
        '<div class="col-span-full text-red-400 text-center py-12">Error al cargar personajes. Por favor, intenta de nuevo.</div>';
    }
  }

  // Initialize: Check auth and load characters
  (async () => {
    const isAuthenticated = await checkAuth();
    if (isAuthenticated) {
      loadCharacters();
    }
  })();
</script>
