---
import Layout from '../../layouts/Layout.astro';
import Pagination from '../../components/Pagination.astro';
import { Newspaper, Eye, Heart, Calendar, Diamond, ChevronRight } from '@lucide/astro';
import DiamondPattern from "../../components/ui/DiamondPattern.astro";
import GoldenLine from "../../components/ui/GoldenLine.astro";

const page = parseInt(Astro.url.searchParams.get('page') || '1');
const categoryId = Astro.url.searchParams.get('category');

// Fetch news from API - use internal URL for SSR to avoid timeout on Render
const INTERNAL_API_URL = import.meta.env.PUBLIC_API_URL || 'http://localhost:3301';
const newsUrl = `${INTERNAL_API_URL}/api/news?page=${page}&limit=9${categoryId ? `&categoryId=${categoryId}` : ''}`;

let newsData;
let categoriesData;

try {
  const [newsResponse, categoriesResponse] = await Promise.all([
    fetch(newsUrl),
    fetch(`${INTERNAL_API_URL}/api/news/categories`)
  ]);

  newsData = await newsResponse.json();
  categoriesData = await categoriesResponse.json();
} catch (error) {
  console.error('Error fetching news:', error);
  newsData = { news: [], pagination: { page: 1, totalPages: 1, total: 0 } };
  categoriesData = { categories: [] };
}

const news = newsData?.news || [];
const pagination = newsData?.pagination || { page: 1, totalPages: 1, total: 0 };
const categories = categoriesData?.categories || [];
---

<Layout title="Noticias">
  <section class="page-container">
    <!-- Header with medieval style -->
    <header class="mb-6 sm:mb-8 text-center">
      <div class="flex items-center justify-center gap-3 mb-3">
        <div class="h-px w-8 sm:w-12 bg-gradient-to-r from-transparent to-yellow-500/50"></div>
        <Diamond class="w-4 h-4 text-yellow-500/70" fill="currentColor" />
        <div class="h-px w-8 sm:w-12 bg-gradient-to-l from-transparent to-yellow-500/50"></div>
      </div>
      <div class="flex items-center justify-center gap-3 mb-3 sm:mb-4">
        <Newspaper class="w-6 h-6 sm:w-8 sm:h-8 text-yellow-500" />
        <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-yellow-500 medieval-font">Noticias</h1>
      </div>
      <p class="text-sm sm:text-base md:text-lg text-gray-400">
        Mantente al día con las últimas novedades del servidor
      </p>
    </header>

    <!-- Categorías -->
    {categories.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-6 justify-center">
        <a
          href="/news"
          class:list={[
            'px-3 py-1.5 text-xs sm:text-sm font-medium rounded-lg border transition-all',
            !categoryId
              ? 'bg-yellow-500/20 text-yellow-500 border-yellow-500/50'
              : 'border-yellow-600/30 text-gray-400 hover:text-yellow-500 hover:border-yellow-500/50'
          ]}
        >
          Todas
        </a>
        {categories.map((cat: any) => (
          <a
            href={`/news?category=${cat.id}`}
            class:list={[
              'px-3 py-1.5 text-xs sm:text-sm font-medium rounded-lg border transition-all',
              categoryId === cat.id.toString()
                ? 'bg-yellow-500/20 text-yellow-500 border-yellow-500/50'
                : 'border-yellow-600/30 text-gray-400 hover:text-yellow-500 hover:border-yellow-500/50'
            ]}
          >
            {cat.name}
          </a>
        ))}
      </div>
    )}

    <!-- News Grid -->
    {news.length === 0 ? (
      <div class="text-center py-8 sm:py-12">
        <p class="text-sm sm:text-base text-gray-400">
          No hay noticias publicadas aún.
        </p>
      </div>
    ) : (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
        {news.map((item: any) => (
          <article class="relative rounded-xl overflow-hidden border border-yellow-600/20 hover:border-yellow-500/40 transition-all group"
                   style="background: linear-gradient(to bottom, rgb(17 24 39 / 0.9), rgb(0 0 0 / 0.85));">
            <DiamondPattern opacity={0.03} class="rounded-xl" />
            <GoldenLine position="top" opacity={0.4} class="group-hover:opacity-60 transition-all" />

            {item.image_url && (
              <figure class="h-40 sm:h-48 overflow-hidden">
                <img
                  src={item.image_url}
                  alt={item.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                />
              </figure>
            )}

            <div class="p-4 sm:p-5 relative z-10">
              {item.category_name && (
                <span class="inline-block text-xs bg-yellow-500/20 text-yellow-500 px-2 py-0.5 rounded border border-yellow-500/30 mb-2">
                  {item.category_name}
                </span>
              )}

              <h2 class="text-base sm:text-lg font-bold text-white mb-2 line-clamp-2">{item.title}</h2>

              <p class="text-xs sm:text-sm text-gray-400 line-clamp-3 mb-3">
                {item.content.replace(/<[^>]*>/g, '').substring(0, 150)}...
              </p>

              <div class="flex items-center gap-3 sm:gap-4 text-xs text-gray-500 mb-4">
                <span class="flex items-center gap-1">
                  <Eye class="w-3 h-3 text-yellow-500/70" />
                  {item.views_count}
                </span>
                <span class="flex items-center gap-1">
                  <Heart class="w-3 h-3 text-yellow-500/70" />
                  {item.likes_count}
                </span>
                <span class="flex items-center gap-1">
                  <Calendar class="w-3 h-3 text-yellow-500/70" />
                  {new Date(item.published_at).toLocaleDateString('es-ES')}
                </span>
              </div>

              <a href={`/news/${item.id}`}
                 class="inline-flex items-center gap-2 px-3 py-1.5 text-xs sm:text-sm font-semibold text-black bg-gradient-to-r from-yellow-500 to-yellow-600 rounded-lg hover:from-yellow-400 hover:to-yellow-500 transition-all">
                Leer más
                <ChevronRight class="w-4 h-4" />
              </a>
            </div>
          </article>
        ))}
      </div>
    )}

    <!-- Pagination -->
    <Pagination
      currentPage={pagination.page}
      totalPages={pagination.totalPages}
      baseUrl={categoryId ? `/news?category=${categoryId}` : '/news'}
    />
  </section>
</Layout>
