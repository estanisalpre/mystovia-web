---
import { MystoviaLogo } from "../assets/logos";
import CartButton from "./CartButton";
import HeaderAuth from "./HeaderAuth";
---

<header class="fixed z-100 top-0 flex-center w-full px-42 py-2 backdrop-blur-md bg-black/30">
  <a href="/">
    <img
      src={MystoviaLogo.src}
      alt="Mystovia Logo"
      class="w-50 h-auto cursor-pointer"
    />
  </a>

  <nav class="w-full flex-center gap-2 px-4 py-2">
    <a
      href="/downloads"
      class="hover:text-yellow-500 transition"
      >Descargas</a
    >
    <a
      href="/marketplace"
      class="hover:text-yellow-500 transition font-semibold"
      >Tienda</a
    >
    <a
      href="/rules"
      class="hover:text-yellow-500 transition"
      >Reglas</a
    >
  </nav>

  <div class="flex-center gap-4">
    <CartButton client:only="react" />
    <HeaderAuth client:only="react" />
  </div>
</header>
