---
import bg5 from "../../assets/backgrounds/bg-5.jpg";
---

<section
  class="min-h-screen relative py-20 bg-cover bg-center bg-fixed"
  style={{ backgroundImage: `url(${bg5.src})` }}
>
  <div class="absolute inset-0 bg-black/60"></div> {/* overlay opcional */}
  
  <div class="relative z-10 text-center">
    <h1 class="text-5xl md:text-6xl font-bold mb-6">
      Welcome to <span class="text-yellow-500">TibiaPS</span>
    </h1>
    <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
      Experience the classic Tibia gameplay with custom features, active
      community, and regular updates.
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a
        href="/register"
        class="px-8 py-4 bg-yellow-600 hover:bg-yellow-700 rounded-lg font-semibold text-lg transition transform hover:scale-105"
      >
        Create Account
      </a>
      <a
        href="/downloads"
        class="px-8 py-4 bg-gray-700 hover:bg-gray-600 rounded-lg font-semibold text-lg transition transform hover:scale-105"
      >
        Download Client
      </a>
    </div>
  </div>
</section>

