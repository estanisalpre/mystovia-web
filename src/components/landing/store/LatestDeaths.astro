---
// Latest Deaths Component - Shows last 5 deaths (compact)
---

<section class="relative flex flex-col w-full rounded-xl overflow-hidden"
         style="background: linear-gradient(to bottom, rgb(17 24 39 / 0.98), rgb(17 24 39), rgb(0 0 0 / 0.98));">
  <!-- Diamond pattern overlay -->
  <div class="absolute inset-0 opacity-[0.03] pointer-events-none rounded-xl" style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cpath d=\'M30 0L60 30L30 60L0 30z\' fill=\'%23d4af37\' fill-opacity=\'0.4\'/%3E%3C/svg%3E'); background-size: 30px 30px;"></div>

  <!-- Top golden line -->
  <div class="absolute top-0 left-0 right-0 h-0.5 bg-gradient-to-r from-transparent via-red-500/50 to-transparent rounded-t-xl"></div>

  <!-- Border -->
  <div class="absolute inset-0 rounded-xl border border-red-600/20 pointer-events-none"></div>

  <!-- Corner ornaments -->
  <div class="absolute top-1.5 left-1.5 w-4 h-4 opacity-20 pointer-events-none">
    <svg viewBox="0 0 100 100" fill="none" class="w-full h-full text-red-500">
      <path d="M0 0 L40 0 Q0 0 0 40 Z" fill="currentColor"/>
    </svg>
  </div>
  <div class="absolute top-1.5 right-1.5 w-4 h-4 opacity-20 pointer-events-none" style="transform: scaleX(-1);">
    <svg viewBox="0 0 100 100" fill="none" class="w-full h-full text-red-500">
      <path d="M0 0 L40 0 Q0 0 0 40 Z" fill="currentColor"/>
    </svg>
  </div>
  <div class="absolute bottom-1.5 left-1.5 w-4 h-4 opacity-20 pointer-events-none" style="transform: scaleY(-1);">
    <svg viewBox="0 0 100 100" fill="none" class="w-full h-full text-red-500">
      <path d="M0 0 L40 0 Q0 0 0 40 Z" fill="currentColor"/>
    </svg>
  </div>
  <div class="absolute bottom-1.5 right-1.5 w-4 h-4 opacity-20 pointer-events-none" style="transform: scale(-1);">
    <svg viewBox="0 0 100 100" fill="none" class="w-full h-full text-red-500">
      <path d="M0 0 L40 0 Q0 0 0 40 Z" fill="currentColor"/>
    </svg>
  </div>

  <!-- Header badge -->
  <div class="absolute -top-0.5 left-1/2 -translate-x-1/2 z-20">
    <div class="relative px-3 py-1.5 rounded-b-lg" style="background: linear-gradient(to bottom, rgb(220 38 38 / 0.9), rgb(185 28 28 / 0.9));">
      <div class="absolute inset-0 rounded-b-lg border border-red-400/30 pointer-events-none"></div>
      <h2 class="text-xs font-bold text-white text-center medieval-font relative z-10 whitespace-nowrap flex items-center gap-1.5">
        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"/>
        </svg>
        LATEST DEATHS
      </h2>
    </div>
  </div>

  <!-- Content -->
  <div class="relative z-10 p-3 pt-9 flex flex-col">
    <!-- Loading state -->
    <div id="deaths-loading" class="flex items-center justify-center py-4">
      <div class="w-5 h-5 border-2 border-red-500/30 border-t-red-500 rounded-full animate-spin"></div>
    </div>

    <!-- Error state -->
    <div id="deaths-error" class="hidden flex items-center justify-center py-4">
      <p class="text-red-400 text-xs">Error al cargar muertes</p>
    </div>

    <!-- Deaths list -->
    <div id="deaths-list" class="hidden space-y-1.5">
      <!-- Deaths will be inserted here -->
    </div>

    <!-- View more button -->
    <div class="mt-2 pt-2 border-t border-red-600/20">
      <a href="/latest-deaths" class="flex items-center justify-center gap-1.5 w-full py-1 text-xs text-red-400 hover:text-red-300 transition-colors group">
        <span>Ver m√°s</span>
        <svg class="w-3 h-3 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .custom-scrollbar::-webkit-scrollbar {
    width: 4px;
  }
  .custom-scrollbar::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.2);
    border-radius: 2px;
  }
  .custom-scrollbar::-webkit-scrollbar-thumb {
    background: rgba(220, 38, 38, 0.3);
    border-radius: 2px;
  }
  .custom-scrollbar::-webkit-scrollbar-thumb:hover {
    background: rgba(220, 38, 38, 0.5);
  }
</style>

<script>
  const API_URL = import.meta.env.PUBLIC_API_URL;

  async function loadLatestDeaths() {
    const loadingEl = document.getElementById('deaths-loading');
    const errorEl = document.getElementById('deaths-error');
    const listEl = document.getElementById('deaths-list');

    try {
      const response = await fetch(`${API_URL}/api/deaths/latest?limit=5`);

      if (!response.ok) {
        throw new Error('Failed to fetch deaths');
      }

      const data = await response.json();

      if (loadingEl) loadingEl.classList.add('hidden');

      if (data.deaths && data.deaths.length > 0) {
        if (listEl) {
          listEl.classList.remove('hidden');
          listEl.innerHTML = data.deaths.map((death: any) => `
            <div class="px-2 py-1.5 rounded border border-red-600/10 hover:border-red-600/30 transition-colors" style="background: linear-gradient(to right, rgba(220, 38, 38, 0.03), transparent);">
              <div class="flex items-center justify-between gap-2">
                <div class="flex-1 min-w-0">
                  <a href="/character-information?name=${encodeURIComponent(death.player.name)}" class="text-red-400 hover:text-red-300 font-medium text-xs truncate block">
                    ${death.player.name}
                  </a>
                  <p class="text-[10px] text-gray-500">Lvl ${death.level}</p>
                </div>
                <div class="text-right flex-shrink-0">
                  <p class="text-[10px] ${death.isPlayerKill ? 'text-yellow-500' : 'text-gray-400'} font-medium truncate max-w-[80px]">
                    ${death.killedBy}
                  </p>
                </div>
              </div>
            </div>
          `).join('');
        }
      } else {
        if (listEl) {
          listEl.classList.remove('hidden');
          listEl.innerHTML = '<p class="text-gray-500 text-xs text-center py-2">No hay muertes recientes</p>';
        }
      }

    } catch (error) {
      console.error('Error loading deaths:', error);
      if (loadingEl) loadingEl.classList.add('hidden');
      if (errorEl) errorEl.classList.remove('hidden');
    }
  }

  // Load deaths on page load
  loadLatestDeaths();
</script>
