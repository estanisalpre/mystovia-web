---
import { Award, ArrowRight } from '@lucide/astro';
import DiamondPattern from "../../ui/DiamondPattern.astro";
import GoldenLine from "../../ui/GoldenLine.astro";
import CornerOrnaments from "../../ui/CornerOrnaments.astro";

// For internal SSR calls, use localhost (same Express server)
const INTERNAL_API_URL = `http://localhost:${process.env.PORT || 3301}`;

interface Player {
  rank: number;
  name: string;
  vocation: string;
  level: number;
  experience: number;
}

let players: Player[] = [];

try {
  const response = await fetch(`${INTERNAL_API_URL}/api/highscores?limit=5`);
  if (response.ok) {
    const data = await response.json();
    players = data.players || [];
  }
} catch (error) {
  console.error('Error fetching highscores:', error);
}
---

<section class="relative w-full rounded-xl overflow-hidden"
         style="background: linear-gradient(to bottom, rgb(17 24 39 / 0.98), rgb(17 24 39), rgb(0 0 0 / 0.98));">
  <!-- Diamond pattern overlay -->
  <DiamondPattern opacity={0.03} class="rounded-xl" />

  <!-- Top golden line -->
  <GoldenLine position="top" />

  <!-- Border -->
  <span class="absolute inset-0 rounded-xl border border-yellow-600/20 pointer-events-none" aria-hidden="true"></span>

  <!-- Corner ornaments -->
  <CornerOrnaments variant="curve" size="md" opacity={0.2} offset={2} />

  <!-- Content -->
  <div class="relative z-10 p-5 pt-12">
    <!-- Header badge -->
    <div class="absolute -top-0.5 left-1/2 -translate-x-1/2">
      <div class="relative px-6 py-2 rounded-b-lg" style="background: linear-gradient(to bottom, rgb(234 179 8 / 0.9), rgb(202 138 4 / 0.9));">
        <div class="absolute inset-0 rounded-b-lg border border-yellow-400/30 pointer-events-none"></div>
        <h2 class="text-sm font-bold text-black text-center medieval-font relative z-10">Highscores</h2>
      </div>
    </div>

    {players.length === 0 ? (
      <div class="flex items-center justify-center py-8 text-center">
        <div>
          <Award class="w-12 h-12 mx-auto text-yellow-500/30 mb-3" strokeWidth={1.5} />
          <p class="text-gray-400 text-sm">No hay datos de highscores</p>
        </div>
      </div>
    ) : (
      <div class="space-y-2">
        <!-- Table Header -->
        <div class="grid grid-cols-12 gap-2 px-3 py-2 text-xs text-gray-400 font-semibold border-b border-yellow-600/20">
          <div class="col-span-1 text-center">#</div>
          <div class="col-span-5">Nombre</div>
          <div class="col-span-4">VocaciÃ³n</div>
          <div class="col-span-2 text-right">Nivel</div>
        </div>

        <!-- Players List -->
        {players.map((player, index) => (
          <a
            href={`/character-information?name=${encodeURIComponent(player.name)}`}
            class="grid grid-cols-12 gap-2 px-3 py-2 rounded-lg transition-all duration-300 hover:bg-yellow-500/5 group"
            style={index === 0 ? "background: linear-gradient(to right, rgb(234 179 8 / 0.1), transparent);" : ""}
          >
            <div class="col-span-1 text-center">
              {index === 0 ? (
                <span class="text-yellow-500 font-bold">ðŸ¥‡</span>
              ) : index === 1 ? (
                <span class="text-gray-300 font-bold">ðŸ¥ˆ</span>
              ) : index === 2 ? (
                <span class="text-amber-600 font-bold">ðŸ¥‰</span>
              ) : (
                <span class="text-gray-500">{player.rank}</span>
              )}
            </div>
            <div class="col-span-5 text-white font-semibold group-hover:text-yellow-500 transition-colors truncate">
              {player.name}
            </div>
            <div class="col-span-4 text-gray-400 text-sm truncate">
              {player.vocation}
            </div>
            <div class="col-span-2 text-right text-yellow-500 font-bold medieval-font">
              {player.level}
            </div>
          </a>
        ))}
      </div>
    )}

    <!-- Footer link -->
    <div class="mt-4 pt-4 border-t border-yellow-600/20">
      <a
        href="/highscores"
        class="btn-medieval btn-medieval-secondary w-full"
      >
        <span>Ver Highscores</span>
        <ArrowRight class="w-4 h-4" />
      </a>
    </div>
  </div>
</section>
