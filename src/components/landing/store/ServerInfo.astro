---
// Server Info Component - Experience Rates & Server Configuration
---

<section class="relative flex flex-col w-full h-full rounded-xl overflow-hidden"
         style="background: linear-gradient(to bottom, rgb(17 24 39 / 0.98), rgb(17 24 39), rgb(0 0 0 / 0.98));">
  <!-- Diamond pattern overlay -->
  <div class="absolute inset-0 opacity-[0.03] pointer-events-none rounded-xl" style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cpath d=\'M30 0L60 30L30 60L0 30z\' fill=\'%23d4af37\' fill-opacity=\'0.4\'/%3E%3C/svg%3E'); background-size: 30px 30px;"></div>

  <!-- Top golden line -->
  <div class="absolute top-0 left-0 right-0 h-0.5 bg-gradient-to-r from-transparent via-yellow-500/50 to-transparent rounded-t-xl"></div>

  <!-- Border -->
  <div class="absolute inset-0 rounded-xl border border-yellow-600/20 pointer-events-none"></div>

  <!-- Corner ornaments -->
  <div class="absolute top-1.5 left-1.5 w-4 h-4 opacity-20 pointer-events-none">
    <svg viewBox="0 0 100 100" fill="none" class="w-full h-full text-yellow-500">
      <path d="M0 0 L40 0 Q0 0 0 40 Z" fill="currentColor"/>
    </svg>
  </div>
  <div class="absolute top-1.5 right-1.5 w-4 h-4 opacity-20 pointer-events-none" style="transform: scaleX(-1);">
    <svg viewBox="0 0 100 100" fill="none" class="w-full h-full text-yellow-500">
      <path d="M0 0 L40 0 Q0 0 0 40 Z" fill="currentColor"/>
    </svg>
  </div>
  <div class="absolute bottom-1.5 left-1.5 w-4 h-4 opacity-20 pointer-events-none" style="transform: scaleY(-1);">
    <svg viewBox="0 0 100 100" fill="none" class="w-full h-full text-yellow-500">
      <path d="M0 0 L40 0 Q0 0 0 40 Z" fill="currentColor"/>
    </svg>
  </div>
  <div class="absolute bottom-1.5 right-1.5 w-4 h-4 opacity-20 pointer-events-none" style="transform: scale(-1);">
    <svg viewBox="0 0 100 100" fill="none" class="w-full h-full text-yellow-500">
      <path d="M0 0 L40 0 Q0 0 0 40 Z" fill="currentColor"/>
    </svg>
  </div>

  <!-- Header badge -->
  <div class="absolute -top-0.5 left-1/2 -translate-x-1/2 z-20">
    <div class="relative px-3 py-1.5 rounded-b-lg" style="background: linear-gradient(to bottom, rgb(234 179 8 / 0.9), rgb(202 138 4 / 0.9));">
      <div class="absolute inset-0 rounded-b-lg border border-yellow-400/30 pointer-events-none"></div>
      <h2 class="text-xs font-bold text-black text-center medieval-font relative z-10 whitespace-nowrap flex items-center gap-1.5">
        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"/>
        </svg>
        SERVER INFO
      </h2>
    </div>
  </div>

  <!-- Content -->
  <div class="relative z-10 p-3 pt-10 space-y-3">
    <!-- Experience Rates Table - Two columns on desktop -->
    <div>
      <h3 class="text-yellow-500 text-[10px] font-semibold uppercase tracking-wider mb-1.5 flex items-center gap-1.5">
        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
        </svg>
        Experience Rates
      </h3>

      <!-- Rates in 2 columns for compact display -->
      <div class="grid grid-cols-2 gap-2">
        <!-- Left column -->
        <div class="rounded-lg overflow-hidden border border-yellow-600/20">
          <div class="grid grid-cols-3 bg-yellow-500/10 text-[10px] font-semibold">
            <div class="px-1.5 py-1 text-gray-400 text-center border-r border-yellow-600/10">From</div>
            <div class="px-1.5 py-1 text-gray-400 text-center border-r border-yellow-600/10">To</div>
            <div class="px-1.5 py-1 text-yellow-500 text-center">Rate</div>
          </div>
          <div class="divide-y divide-yellow-600/10 text-[10px]">
            <div class="grid grid-cols-3 hover:bg-yellow-500/5">
              <div class="px-1.5 py-0.5 text-gray-300 text-center border-r border-yellow-600/10">1</div>
              <div class="px-1.5 py-0.5 text-gray-300 text-center border-r border-yellow-600/10">49</div>
              <div class="px-1.5 py-0.5 text-yellow-500 text-center font-bold">x110</div>
            </div>
            <div class="grid grid-cols-3 hover:bg-yellow-500/5">
              <div class="px-1.5 py-0.5 text-gray-300 text-center border-r border-yellow-600/10">50</div>
              <div class="px-1.5 py-0.5 text-gray-300 text-center border-r border-yellow-600/10">99</div>
              <div class="px-1.5 py-0.5 text-yellow-500 text-center font-bold">x100</div>
            </div>
            <div class="grid grid-cols-3 hover:bg-yellow-500/5">
              <div class="px-1.5 py-0.5 text-gray-300 text-center border-r border-yellow-600/10">100</div>
              <div class="px-1.5 py-0.5 text-gray-300 text-center border-r border-yellow-600/10">149</div>
              <div class="px-1.5 py-0.5 text-yellow-500 text-center font-bold">x90</div>
            </div>
            <div class="grid grid-cols-3 hover:bg-yellow-500/5">
              <div class="px-1.5 py-0.5 text-gray-300 text-center border-r border-yellow-600/10">150</div>
              <div class="px-1.5 py-0.5 text-gray-300 text-center border-r border-yellow-600/10">199</div>
              <div class="px-1.5 py-0.5 text-yellow-500 text-center font-bold">x80</div>
            </div>
            <div class="grid grid-cols-3 hover:bg-yellow-500/5">
              <div class="px-1.5 py-0.5 text-gray-300 text-center border-r border-yellow-600/10">200</div>
              <div class="px-1.5 py-0.5 text-gray-300 text-center border-r border-yellow-600/10">249</div>
              <div class="px-1.5 py-0.5 text-yellow-500 text-center font-bold">x70</div>
            </div>
            <div class="grid grid-cols-3 hover:bg-yellow-500/5">
              <div class="px-1.5 py-0.5 text-gray-300 text-center border-r border-yellow-600/10">250</div>
              <div class="px-1.5 py-0.5 text-gray-300 text-center border-r border-yellow-600/10">299</div>
              <div class="px-1.5 py-0.5 text-yellow-500 text-center font-bold">x60</div>
            </div>
            <div class="grid grid-cols-3 hover:bg-yellow-500/5">
              <div class="px-1.5 py-0.5 text-gray-300 text-center border-r border-yellow-600/10">300</div>
              <div class="px-1.5 py-0.5 text-gray-300 text-center border-r border-yellow-600/10">349</div>
              <div class="px-1.5 py-0.5 text-yellow-500 text-center font-bold">x50</div>
            </div>
          </div>
        </div>

        <!-- Right column -->
        <div class="rounded-lg overflow-hidden border border-yellow-600/20">
          <div class="grid grid-cols-3 bg-yellow-500/10 text-[10px] font-semibold">
            <div class="px-1.5 py-1 text-gray-400 text-center border-r border-yellow-600/10">From</div>
            <div class="px-1.5 py-1 text-gray-400 text-center border-r border-yellow-600/10">To</div>
            <div class="px-1.5 py-1 text-yellow-500 text-center">Rate</div>
          </div>
          <div class="divide-y divide-yellow-600/10 text-[10px]">
            <div class="grid grid-cols-3 hover:bg-yellow-500/5">
              <div class="px-1.5 py-0.5 text-gray-300 text-center border-r border-yellow-600/10">350</div>
              <div class="px-1.5 py-0.5 text-gray-300 text-center border-r border-yellow-600/10">399</div>
              <div class="px-1.5 py-0.5 text-yellow-500 text-center font-bold">x35</div>
            </div>
            <div class="grid grid-cols-3 hover:bg-yellow-500/5">
              <div class="px-1.5 py-0.5 text-gray-300 text-center border-r border-yellow-600/10">400</div>
              <div class="px-1.5 py-0.5 text-gray-300 text-center border-r border-yellow-600/10">449</div>
              <div class="px-1.5 py-0.5 text-yellow-500 text-center font-bold">x20</div>
            </div>
            <div class="grid grid-cols-3 hover:bg-yellow-500/5">
              <div class="px-1.5 py-0.5 text-gray-300 text-center border-r border-yellow-600/10">450</div>
              <div class="px-1.5 py-0.5 text-gray-300 text-center border-r border-yellow-600/10">499</div>
              <div class="px-1.5 py-0.5 text-yellow-500 text-center font-bold">x10</div>
            </div>
            <div class="grid grid-cols-3 hover:bg-yellow-500/5">
              <div class="px-1.5 py-0.5 text-gray-300 text-center border-r border-yellow-600/10">500</div>
              <div class="px-1.5 py-0.5 text-gray-300 text-center border-r border-yellow-600/10">549</div>
              <div class="px-1.5 py-0.5 text-yellow-500 text-center font-bold">x7</div>
            </div>
            <div class="grid grid-cols-3 hover:bg-yellow-500/5">
              <div class="px-1.5 py-0.5 text-gray-300 text-center border-r border-yellow-600/10">550</div>
              <div class="px-1.5 py-0.5 text-gray-300 text-center border-r border-yellow-600/10">599</div>
              <div class="px-1.5 py-0.5 text-yellow-500 text-center font-bold">x5</div>
            </div>
            <div class="grid grid-cols-3 hover:bg-yellow-500/5">
              <div class="px-1.5 py-0.5 text-gray-300 text-center border-r border-yellow-600/10">600</div>
              <div class="px-1.5 py-0.5 text-gray-300 text-center border-r border-yellow-600/10">750</div>
              <div class="px-1.5 py-0.5 text-yellow-500 text-center font-bold">x3</div>
            </div>
            <div class="grid grid-cols-3 hover:bg-yellow-500/5 bg-yellow-500/5">
              <div class="px-1.5 py-0.5 text-gray-300 text-center border-r border-yellow-600/10">751</div>
              <div class="px-1.5 py-0.5 text-gray-300 text-center border-r border-yellow-600/10">+</div>
              <div class="px-1.5 py-0.5 text-yellow-500 text-center font-bold">x2</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Other Rates - Same row -->
    <div class="grid grid-cols-3 gap-1.5">
      <!-- Skills -->
      <div class="relative p-2 rounded-lg text-center border border-yellow-600/20 overflow-hidden" style="background: linear-gradient(to bottom, rgba(234, 179, 8, 0.05), transparent);">
        <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-yellow-500/30 to-transparent"></div>
        <div class="text-base font-bold text-yellow-500 medieval-font">x12</div>
        <div class="text-[10px] text-gray-400 uppercase tracking-wide">Skills</div>
      </div>

      <!-- Magic -->
      <div class="relative p-2 rounded-lg text-center border border-yellow-600/20 overflow-hidden" style="background: linear-gradient(to bottom, rgba(234, 179, 8, 0.05), transparent);">
        <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-yellow-500/30 to-transparent"></div>
        <div class="text-base font-bold text-yellow-500 medieval-font">x9</div>
        <div class="text-[10px] text-gray-400 uppercase tracking-wide">Magic</div>
      </div>

      <!-- Loot -->
      <div class="relative p-2 rounded-lg text-center border border-yellow-600/20 overflow-hidden" style="background: linear-gradient(to bottom, rgba(234, 179, 8, 0.05), transparent);">
        <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-yellow-500/30 to-transparent"></div>
        <div class="text-base font-bold text-yellow-500 medieval-font">x3</div>
        <div class="text-[10px] text-gray-400 uppercase tracking-wide">Loot</div>
      </div>
    </div>
  </div>
</section>
