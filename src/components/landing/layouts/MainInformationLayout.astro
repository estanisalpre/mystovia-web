---
import LoginComponent from "../store/LoginComponent.astro"
import FeaturesSection from "../store/FeaturesSection.astro"
import ServerStats from "../store/ServerStats.tsx"
import ServerInfo from "../store/ServerInfo.astro"
import LatestDeaths from "../store/LatestDeaths.astro"
import SearchCharacter from "../store/SearchCharacter.astro";
import StoreCarousel from "../store/StoreCarousel.astro";
import HighscoresPreview from "../store/HighscoresPreview.astro";
import GuildsPreview from "../store/GuildsPreview.astro";
import OnlinePreview from "../store/OnlinePreview.astro";
import LiveStreams from "../store/LiveStreams.astro";
---

<section class="min-h-screen w-full max-w-[1150px] mx-auto px-4 py-8 bg-transparent">
    <!-- Mobile: Stack vertically, Desktop: 3 column Grid layout -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 pt-4">
        <!-- MOBILE ONLY: Search Character (full width, first) -->
        <div class="md:hidden col-span-1">
            <SearchCharacter />
        </div>

        <!-- ROW 0: Live Streams (full width) -->
        <div class="md:col-span-3">
            <LiveStreams />
        </div>

        <!-- ROW 1: News (full width) -->
        <div class="md:col-span-3">
            <FeaturesSection />
        </div>

        <!-- ROW 2: Server Info (2 cols) + Login (1 col) - items-start prevents stretching -->
        <div class="md:col-span-2">
            <ServerInfo />
        </div>
        <div class="md:col-span-1 self-start">
            <LoginComponent />
        </div>

        <!-- ROW 3: Highscores (2 cols) + Server Stats (1 col) -->
        <div class="md:col-span-2">
            <HighscoresPreview />
        </div>
        <div class="md:col-span-1">
            <ServerStats client:only="react" />
        </div>

        <!-- ROW 4: Store Carousel (3 cols) -->
        <div class="md:col-span-3">
            <StoreCarousel />
        </div>

        <!-- ROW 5: Latest Deaths (2 cols) + Online Players (1 col) -->
        <div class="md:col-span-2">
            <LatestDeaths />
        </div>
        <div class="md:col-span-1">
            <OnlinePreview />
        </div>

        <!-- ROW 6: Guilds (full width) -->
        <div class="md:col-span-3">
            <GuildsPreview />
        </div>
    </div>
</section>