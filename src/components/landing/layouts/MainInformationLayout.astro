---
import LoginComponent from "../store/LoginComponent.astro"
import FeaturesSection from "../store/FeaturesSection.astro"
import ServerStats from "../store/ServerStats.tsx"
import SearchCharacter from "../store/SearchCharacter.astro";
---

<section class="min-h-screen w-full max-w-[1150px] mx-auto px-4 py-8 bg-transparent">
    <!-- Mobile: Stack vertically, Desktop: Grid layout -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 auto-rows-auto pt-4">
        <!-- Login Component -->
        <div class="md:col-span-1 lg:col-span-1 min-h-[300px] mt-2">
            <LoginComponent />
        </div>

        <!-- Features Section (News) -->
        <div class="md:col-span-1 lg:col-span-2 min-h-[300px] mt-2">
            <FeaturesSection />
        </div>

        <!-- Server Stats -->
        <div class="md:col-span-1 lg:col-span-1 min-h-[300px] mt-2">
            <ServerStats client:load />
        </div>

        <!-- Search Character -->
        <div class="md:col-span-2 lg:col-span-4 min-h-[120px] mt-2">
            <SearchCharacter />
        </div>
    </div>
</section>