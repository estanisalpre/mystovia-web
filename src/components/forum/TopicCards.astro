---
import StatsCard from "@c/admin/StatsCard.astro";

interface Category {
  id: number;
  name: string;
  description?: string;
  topics_count?: number;
}

interface Props {
  category: Category;
}

const { category } = Astro.props;
---

<div class="border flex items-center justify-between rounded-lg p-4 hover:border-yellow-300">
  <div class="flex-1">
    <h2 class="font-extrabold text-2xl mb-2 text-yellow-300">
      <a
        href={`/forum/category/${category.id}`}
        class="hover:text-primary transition-all hover:ml-2 cursor-pointer"
      >
        {category.name}
      </a>
    </h2>

    {category.description && (
      <p class="text-base-content/70">{category.description}</p>
    )}
  </div>

  <StatsCard
    statsTitle="Temas"
    statsValue={category.topics_count || 0}
  />
</div>
