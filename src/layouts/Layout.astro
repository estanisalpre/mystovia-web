---
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import bg5 from "../assets/backgrounds/bg-5.jpg";
import MusicPlayer from '@lib/components/MusicPlayer.astro';
import Particles from '@lib/components/Particles.astro';
import PageTransition from '@lib/components/PageTransition.astro';
import LanguageSelector from '../components/LanguageSelector';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Tibia Private Server" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title}</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.ico">

  <!-- google fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400..900&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
  <ViewTransitions/>
</head>
<body class="min-h-screen text-white flex flex-col">
  <Header />
  <main class="relative flex-1 bg-cover bg-center bg-fixed"
    style={{ backgroundImage: `url(${bg5.src})` }}
  >
    <div class="absolute inset-0 bg-black/50 pointer-events-none z-0"></div>
    <Particles client:load />
    <slot />
  </main>
  <MusicPlayer client:load />
  <LanguageSelector client:load />
  <PageTransition />
  <Footer />
</body>
</html>