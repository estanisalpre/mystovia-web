{
  "name": "mystovia-web",
  "version": "0.1.0",
  "description": "Mystovia web is a website for the Mystovia MMORPG game, providing information, community features, and resources for players.",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"pnpm dev:astro\" \"pnpm dev:server\"",
    "dev:astro": "astro dev",
    "dev:server": "nodemon --watch server/src --ext ts --exec tsx server/src/index.ts",
    "build": "astro build && tsc --project server/tsconfig.json",
    "preview": "astro preview",
    "server:prod": "node server/dist/index.js",
    "start": "pnpm run server:prod",
    "seo": "seopilot"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.17.0",
  "dependencies": {
    "@astrojs/db": "^0.18.2",
    "@astrojs/node": "^9.5.0",
    "@astrojs/vue": "^5.1.2",
    "@lucide/astro": "^0.552.0",
    "@tailwindcss/vite": "^4.1.16",
    "astro": "^5.15.3",
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "i18next": "^25.7.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.552.0",
    "mercadopago": "^2.10.0",
    "mysql2": "^3.15.3",
    "nodemailer": "^7.0.10",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.4.1",
    "resend": "^6.6.0",
    "seopilot": "^0.1.0",
    "tailwindcss": "^4.1.16",
    "tsparticles": "^3.9.1",
    "tsparticles-engine": "^2.12.0",
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@astrojs/react": "^4.4.1",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/bcryptjs": "^3.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mysql": "^2.15.27",
    "@types/node": "^24.10.0",
    "@types/nodemailer": "^7.0.3",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
